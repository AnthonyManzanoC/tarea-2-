@model Order
@{
    ViewData["Title"] = "¡Confirmacion de Pedido!";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirmar Entrega</title>
    <!-- Fuente Google para un look refinado -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500">
    <!-- Font Awesome para íconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Reset y estilos básicos */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(135deg, #e3f2fd, #bbdefb);
            color: #333;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            overflow: hidden;
        }

        .container {
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 400px;
            text-align: center;
            animation: fadeIn 1s ease-out;
        }

        h2 {
            font-size: 1.8em;
            margin-bottom: 20px;
            color: #1565c0;
            position: relative;
        }

            h2::before {
                content: '\f58d'; /* Icono de FontAwesome */
                font-family: 'Font Awesome 5 Free';
                font-weight: 900;
                font-size: 2em;
                color: #64b5f6;
                position: absolute;
                top: -50px;
                left: 50%;
                transform: translateX(-50%) rotate(0deg);
                animation: rotateIcon 3s infinite linear;
            }

        p {
            margin-bottom: 20px;
            font-size: 1.1em;
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 15px;
        }

        label {
            font-weight: 500;
            color: #555;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            border: 2px solid #ddd;
            border-radius: 50px;
            font-size: 1em;
            transition: border-color 0.3s ease;
        }

            input[type="text"]:focus {
                border-color: #42a5f5;
                outline: none;
            }

        button {
            padding: 10px 20px;
            background: #1565c0;
            color: #fff;
            font-size: 1.1em;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            transition: background 0.3s ease, transform 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            button:hover {
                background: #1e88e5;
                transform: scale(1.05);
            }

            button i {
                margin-right: 8px;
                animation: bounceIcon 2s infinite ease-in-out;
            }

        .message {
            margin-top: 15px;
            font-size: 1em;
            font-weight: bold;
            text-align: center;
        }

            .message.error {
                color: red;
            }

            .message.success {
                color: green;
            }

        /* Animaciones */
        @@keyframes fadeIn {
            0%

        {
            opacity: 0;
            transform: translateY(-20px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@keyframes rotateIcon {
            0%

        {
            transform: translateX(-50%) rotate(0deg);
        }

        100% {
            transform: translateX(-50%) rotate(360deg);
        }

        }

        @@keyframes bounceIcon {
            0%, 100%

        {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-5px);
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Confirmar Entrega</h2>
        <p>Estimado/a <strong>@Model.Customer.FullName</strong>,</p>
        <p>Por favor ingrese el código de confirmación que recibió en su correo para confirmar la entrega de su pedido.</p>

        <form method="post" asp-action="ConfirmDelivery" asp-route-orderId="@Model.Id">
            <div>
                <label for="enteredCode">Código de Confirmación:</label>
                <input type="text" id="enteredCode" name="enteredCode" required />
            </div>
            <button type="submit">
                <i class="fas fa-check-circle"></i> Confirmar Entrega
            </button>
        </form>

        @if (TempData["Error"] != null)
        {
            <p class="message error">@TempData["Error"]</p>
        }

        @if (TempData["Success"] != null)
        {
            <p style="color: green;">@TempData["Success"]</p>
            @TempData.Remove("Success")
        }

    </div>
</body>
</html>
