@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Ofertas Falsas";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ofertas Falsas - Revolución Minimalista</title>
    <!-- Fuentes y CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- GSAP -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <style>
        /* Reset y Base */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            overflow-x: hidden;
        }

        :root {
            --primary-color: #90caf9;
            --accent-color: #64b5f6;
            --text-color: #90caf9;
            --glow-color: rgba(66, 230, 149, 0.8);
            --background-light: #0d0d0d;
            --background-dark: #121212;
            --overlay-color: rgba(0,0,0,0.5);
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background-color: var(--background-light);
            color: var(--text-color);
            transition: background 0.5s ease, color 0.5s ease;
        }

            body.dark-mode {
                background-color: var(--background-dark);
                color: #e0e0e0;
            }
        /* Preloader Cinematográfico */
        #preloader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--primary-color);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 3000;
        }

        .spinner {
            width: 70px;
            height: 70px;
            border: 10px solid rgba(255,255,255,0.3);
            border-top: 10px solid #fff;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }
        @@keyframes spin {
            to

        {
            transform: rotate(360deg);
        }

        }
        /* Botón Dark Mode Toggle */
        #darkModeToggle {
            position: fixed;
            top: 130px;
            right: 20px;
            z-index: 1500;
            padding: 10px 20px;
            border-radius: 50px;
            font-weight: bold;
            background: linear-gradient(45deg, var(--accent-color), var(--primary-color));
            color: #fff;
            border: none;
            cursor: pointer;
            box-shadow: 0 0 10px var(--glow-color);
            transition: transform 0.3s ease;
        }

            #darkModeToggle:hover {
                transform: scale(1.05);
            }
        /* Sección Héroe con Parallax */
        .hero {
            position: relative;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            perspective: 1200px;
        }

        .hero-bg {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #0d0d0d, #2a2a2a);
            z-index: -2;
        }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--overlay-color);
            z-index: -1;
        }

        .hero-content {
            text-align: center;
            padding: 20px;
            z-index: 1;
        }

            .hero-content h1 {
                font-size: 5rem;
                margin-bottom: 20px;
                text-transform: uppercase;
                letter-spacing: 5px;
            }

            .hero-content p {
                font-size: 1.5rem;
                margin-bottom: 40px;
                opacity: 0.8;
            }
        /* Botón Premium - Diseño Unificado */
        .btn-premium {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: linear-gradient(45deg, var(--accent-color), var(--primary-color));
            border: none;
            padding: 12px 24px;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 2px;
            color: #fff;
            cursor: pointer;
            border-radius: 50px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .btn-premium:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 20px rgba(0,0,0,0.4);
            }
        /* Sección "Hate" revolucionaria */
        .hate-section {
            text-align: center;
            padding: 60px 20px;
            background: #1a1a1a;
        }

            .hate-section .btn-premium {
                background: linear-gradient(45deg, #ff6b81, #ff4757);
                letter-spacing: 2px;
            }

                .hate-section .btn-premium:hover {
                    transform: rotate(360deg);
                }

            .hate-section .hate-message {
                margin-top: 20px;
                font-size: 1.5rem;
                font-weight: bold;
            }
        /* Formas flotantes */
        .floating-shape {
            position: absolute;
            border-radius: 50%;
            opacity: 0.15;
            background: #ff4757;
        }

        .shape1 {
            width: 150px;
            height: 150px;
            top: 10%;
            left: 20%;
        }

        .shape2 {
            width: 100px;
            height: 100px;
            bottom: 15%;
            right: 25%;
        }

        .shape3 {
            width: 200px;
            height: 200px;
            top: 60%;
            right: 10%;
        }
        /* Animación de aparición */
        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .product-item {
            opacity: 0;
        }
    </style>
</head>
<body>
    <!-- Preloader -->
    <div id="preloader" role="alert" aria-busy="true">
        <div class="spinner" aria-hidden="true"></div>
    </div>

   

    <!-- Sección Héroe con Parallax -->
    <section class="hero" role="banner">
        <div class="hero-bg"></div>
        <div class="hero-overlay"></div>
        <!-- Formas flotantes para dinamismo -->
        <div class="floating-shape shape1"></div>
        <div class="floating-shape shape2"></div>
        <div class="floating-shape shape3"></div>
        <div class="hero-content">
            <h1>No a las Ofertas Falsas</h1>
            <p>En Comercial Don Julio combatimos las imitaciones y promociones engañosas. Solo lo original manda.</p>
            <button class="btn-premium" onclick="window.location.href='/Ofertas/Reales'" aria-label="Ver Ofertas Reales">
                <i class="fa-solid fa-tags"></i> 
            </button>
        </div>
    </section>

    <!-- Sección "Hate" -->
    <section class="hate-section" aria-label="Sección de mensajes destacados">
        <button id="btn-hate" class="btn-premium" aria-label="Descubrir mensaje revolucionario">
            <i class="fa-solid fa-bolt"></i> Descubre por qué somos los reyes
        </button>
        <div id="hate-message" class="hate-message" aria-live="polite"></div>
    </section>

    <div class="text-center my-4">
        <a asp-controller="Ofertas" asp-action="Reales" class="btn-premium" aria-label="Ver Ofertas Disponibles">
            <i class="fa-solid fa-tags"></i> Ver Ofertas Disponibles
        </a>
    </div>
    <div class="text-center my-4">
        <button type="button" onclick="location.href='/Home/Index'" class="btn-premium" aria-label="Regresar al Inicio">
            <i class="fa-solid fa-house"></i> Regresar al Inicio
        </button>
    </div>

    <!-- Animaciones GSAP -->
    <script>
        gsap.timeline()
            .from('.hero-content h1', { duration: 1.2, opacity: 0, y: -50, ease: "power3.out" })
            .from('.hero-content p', { duration: 1, opacity: 0, y: 50, ease: "power3.out" }, "-=0.6")
            .from('.hero-content .btn-premium', { duration: 1, opacity: 0, scale: 0.8, ease: "back.out(1.7)" }, "-=0.5");

        gsap.to(".shape1", { duration: 8, x: 50, y: 30, repeat: -1, yoyo: true, ease: "sine.inOut" });
        gsap.to(".shape2", { duration: 10, x: -50, y: -30, repeat: -1, yoyo: true, ease: "sine.inOut" });
        gsap.to(".shape3", { duration: 12, x: 70, y: -20, repeat: -1, yoyo: true, ease: "sine.inOut" });

        const hateMessages = [
            "Mientras otros imitan sin alma, nosotros creamos la excelencia.",
            "La mediocridad se esconde en imitaciones; la grandeza nace de la originalidad.",
            "No imitamos, creamos: nuestra originalidad es inquebrantable.",
            "Innovación, calidad y liderazgo: ese es nuestro sello.",
            "Mientras otros se ocultan, nosotros brillamos como reyes."
        ];
        const messageColors = ["#FF6B6B", "#FFD93D", "#6BCB77", "#4D96FF", "#FF9F1C"];
        function showRandomHateMessage() {
            const randomMessage = hateMessages[Math.floor(Math.random() * hateMessages.length)];
            const randomColor = messageColors[Math.floor(Math.random() * messageColors.length)];
            const hateMessageDiv = document.getElementById('hate-message');
            hateMessageDiv.textContent = randomMessage;
            hateMessageDiv.style.color = randomColor;
            gsap.fromTo(hateMessageDiv, { opacity: 0, y: -30, rotation: -10 }, { duration: 1, opacity: 1, y: 0, rotation: 0, ease: "elastic.out(1, 0.3)" });
        }
        document.getElementById('btn-hate').addEventListener('click', showRandomHateMessage);
    </script>

    <!-- Preloader y Dark Mode Toggle con Persistencia -->
    <script>
        window.addEventListener('load', () => {
            gsap.to("#preloader", {
                duration: 0.8,
                opacity: 0,
                scale: 0.9,
                onComplete: () => {
                    document.getElementById("preloader").style.display = "none";
                }
            });
        });

        // Dark Mode Toggle con persistencia
        const darkModeToggle = document.getElementById("darkModeToggle");
        if(localStorage.getItem("theme") === "dark"){
            document.body.classList.add("dark-mode");
            darkModeToggle.textContent = "Light Mode";
            darkModeToggle.setAttribute("aria-pressed", "true");
        }
        darkModeToggle.addEventListener("click", () => {
            document.body.classList.toggle("dark-mode");
            const isDark = document.body.classList.contains("dark-mode");
            darkModeToggle.textContent = isDark ? "Light Mode" : "Dark Mode";
            darkModeToggle.setAttribute("aria-pressed", isDark.toString());
            localStorage.setItem("theme", isDark ? "dark" : "light");
        });
    </script>
</body>
</html>
