@model IEnumerable<CoronelExpress.Models.Product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Inicio";
    // Función para generar una clase de CSS a partir del nombre de la categoría
    Func<string, string> categoryClass = cat => "cat-" + cat.ToLower().Replace(" ", "-");
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <!-- Swiper CSS para el Hero Carousel -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <!-- GSAP y ScrollTrigger -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>

    <style>
        :root {
            --primary-color: #3bb2b8;
            --accent-color: #42e695;
            --text-color: #121212;
            --overlay-color: rgba(255, 255, 255, 0.55);
            --glow-color: rgba(66, 230, 149, 0.8);
        }
        /* REGLAS GENERALES */
        body {
            background-color: #fff;
            color: var(--text-color);
            margin: 0;
            padding: 0;
            font-family: "Poppins", sans-serif;
            scroll-behavior: smooth;
        }

            body.dark-mode {
                background-color: #121212;
                color: #e0e0e0;
            }
        /* PRELOADER */
        #preloader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: var(--primary-color);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 3000;
        }

        .spinner {
            width: 60px;
            height: 60px;
            border: 8px solid rgba(255,255,255,0.3);
            border-top: 8px solid #fff;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }
        /* BOTÓN DARK MODE */
        #darkModeToggle {
            position: fixed;
            top: 130px;
            right: 20px;
            z-index: 1500;
            padding: 12px 24px;
            border-radius: 50px;
            font-weight: bold;
            background: var(--accent-color);
            color: #fff;
            border: none;
            cursor: pointer;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }

            #darkModeToggle:hover {
                transform: scale(1.05);
            }
        /* HERO CAROUSEL CON SWIPER 3D */
        .swiper {
            width: 100%;
            height: 100vh;
            overflow: hidden;
            position: relative;
        }

        .swiper-slide {
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            background-size: cover;
            background-position: center;
            animation: slideEntrance 1s ease-out forwards;
        }

        @@keyframes slideEntrance {
            from {
                opacity: 0;
                transform: translateY(50px) rotateX(10deg);
            }

            to {
                opacity: 1;
                transform: translateY(0) rotateX(0deg);
            }
        }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--overlay-color);
            backdrop-filter: blur(3px);
            z-index: 1;
            animation: overlayPulse 4s ease-in-out infinite alternate;
        }

        @@keyframes overlayPulse {
            from {
                opacity: 0.55;
            }

            to {
                opacity: 0.65;
            }
        }

        .hero-content {
            position: relative;
            z-index: 2;
            text-align: center;
            padding: 20px;
            animation: fadeInUp 1s ease-in-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .hero-content h1 {
            font-size: 3rem;
            animation: textTilt 2s ease-in-out infinite alternate;
        }

        @@keyframes textTilt {
            from {
                transform: perspective(600px) rotateX(0deg);
            }

            to {
                transform: perspective(600px) rotateX(4deg);
            }
        }

        .glow-text {
            animation: textGlow 2s ease-in-out infinite alternate;
        }

        @@keyframes textGlow {
            from {
                text-shadow: 0 0 10px var(--glow-color), 0 0 20px var(--glow-color);
            }

            to {
                text-shadow: 0 0 20px var(--glow-color), 0 0 30px var(--glow-color);
            }
        }
        /* ICONOS Y EMOJIS FLOTANTES */
        .floating-icon, .floating-emoji {
            position: absolute;
            animation: floatAdvanced 6s ease-in-out infinite, pulse 2.5s infinite;
            filter: drop-shadow(0 2px 5px rgba(0,0,0,0.2));
        }

        .floating-icon {
            color: var(--accent-color);
            font-size: 3rem;
            opacity: 0.85;
        }

        .floating-emoji {
            font-size: 2.5rem;
            opacity: 0.9;
        }

        .icon-pos-1 {
            top: 10%;
            left: 5%;
            animation-duration: 7s;
        }

        .icon-pos-2 {
            top: 20%;
            right: 10%;
            animation-duration: 6s;
        }

        .icon-pos-3 {
            bottom: 15%;
            left: 20%;
            animation-duration: 8s;
        }

        .icon-pos-4 {
            top: 50%;
            right: 20%;
            animation-duration: 7s;
        }

        .emoji-pos-1 {
            top: 75%;
            left: 50%;
        }

        .emoji-pos-2 {
            top: 65%;
            right: 40%;
        }

        .emoji-pos-3 {
            bottom: 20%;
            left: 40%;
        }

        @@keyframes floatAdvanced {
            0% {
                transform: translateY(0) rotate(0deg);
            }

            50% {
                transform: translateY(-20px) rotate(8deg);
            }

            100% {
                transform: translateY(0) rotate(0deg);
            }
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }

            100% {
                transform: scale(1);
            }
        }
        /* BOTONES NEÓN Y RIPPLES */
        .btn-neon {
            font-size: 1.2rem;
            padding: 12px 24px;
            border-radius: 50px;
            color: #fff;
            background: linear-gradient(45deg, var(--accent-color), var(--primary-color));
            box-shadow: 0 0 20px rgba(66,230,149,0.5);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            text-transform: uppercase;
            font-weight: bold;
            border: none;
            position: relative;
            overflow: hidden;
        }

            .btn-neon::before {
                content: '';
                position: absolute;
                top: -10px;
                left: -10px;
                right: -10px;
                bottom: -10px;
                border-radius: 50px;
                background: rgba(255,255,255,0.2);
                z-index: -1;
                opacity: 0;
                transition: opacity 0.4s ease;
            }

            .btn-neon:hover {
                transform: scale(1.08) rotateY(3deg);
                box-shadow: 0 0 30px var(--glow-color);
            }

                .btn-neon:hover::before {
                    opacity: 1;
                }
            /* Efecto Ripple en botones al clic */
            .btn-neon.ripple {
                position: relative;
                overflow: hidden;
            }

                .btn-neon.ripple span.ripple-effect {
                    position: absolute;
                    border-radius: 50%;
                    transform: scale(0);
                    animation: rippleAnim 0.6s linear;
                    background: rgba(255,255,255,0.7);
                }

        @@keyframes rippleAnim {
            to

        {
            transform: scale(4);
            opacity: 0;
        }

        }
        /* TARJETAS DE PRODUCTO ULTRA con efecto 3D avanzado */
        .card {
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            color: var(--text-color);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
            position: relative;
            transform-style: preserve-3d;
            animation: cardEntrance 0.8s ease-out;
        }

        @@keyframes cardEntrance {
            from {
                opacity: 0;
                transform: translateY(30px) scale(0.95);
            }

            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        .card:hover {
            transform: perspective(1000px) rotateX(5deg) rotateY(2deg) scale(1.02);
            box-shadow: 0 20px 40px rgba(0,0,0,0.2);
        }

        .card-img-top {
            height: 220px;
            object-fit: cover;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            transition: transform 0.5s ease;
        }

        .card:hover .card-img-top {
            transform: scale(1.05);
        }

        .card-body {
            padding: 20px;
            text-align: center;
        }

        .price {
            font-size: 1.4rem;
            font-weight: bold;
            color: var(--primary-color);
        }

        .stock {
            font-size: 1rem;
            color: #f2545b;
        }
        /* Estilos para diferenciar según condición */
        /* Productos sin IVA (Canasta Básica) */
        .iva-free {
            border: 2px solid var(--accent-color);
            position: relative;
            animation: pulseBorder 3s infinite;
        }

        @@keyframes pulseBorder {
            0% {
                border-color: var(--accent-color);
            }

            50% {
                border-color: var(--primary-color);
            }

            100% {
                border-color: var(--accent-color);
            }
        }

        .iva-free::after {
            content: "Sin IVA";
            position: absolute;
            top: 10px;
            right: 10px;
            background: var(--accent-color);
            color: #fff;
            padding: 4px 8px;
            border-radius: 5px;
            font-size: 0.8rem;
            font-weight: bold;
        }
        /* Productos en Oferta */
        .on-offer {
            border: 2px solid #ff6b81;
            position: relative;
            animation: shake 1.5s infinite;
        }

        @@keyframes shake {
            0%, 100% {
                transform: rotate(0deg);
            }

            25% {
                transform: rotate(1deg);
            }

            50% {
                transform: rotate(0deg);
            }

            75% {
                transform: rotate(-1deg);
            }
        }

        .on-offer::before {
            content: attr(data-discount) " OFF";
            position: absolute;
            top: 10px;
            left: 10px;
            background: #ff6b81;
            color: #fff;
            padding: 4px 8px;
            border-radius: 5px;
            font-size: 0.8rem;
            font-weight: bold;
        }
        /* Diferenciación por categoría (fondo sutil en la tarjeta) */
        .cat-electrónica .card-body {
            background-color: rgba(255, 235, 238, 0.5);
        }

        .cat-hogar .card-body {
            background-color: rgba(232, 245, 233, 0.5);
        }

        .cat-ropa .card-body {
            background-color: rgba(232, 234, 246, 0.5);
        }
        /* SEPARADOR FUTURISTA */
        .divider {
            height: 3px;
            background: linear-gradient(to right, transparent, var(--primary-color), transparent);
            margin: 20px auto;
            width: 50%;
        }
        /* BOTÓN VOLVER ARRIBA */
        #backToTop {
            position: fixed;
            bottom: 30px;
            right: 30px;
            background: var(--accent-color);
            color: #fff;
            border: none;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            font-size: 1.5rem;
            display: none;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 4px 10px rgba(0,0,0,0.3);
            z-index: 100;
        }
        /* Animaciones para carrusel por categoría */
        .carousel-item {
            transform: perspective(1200px) rotateY(30deg);
            transition: transform 0.8s ease, opacity 0.8s ease;
            opacity: 0;
            backface-visibility: hidden;
        }

            .carousel-item.active {
                transform: perspective(1200px) rotateY(0deg);
                opacity: 1;
                animation: categorySlide 0.8s ease-out forwards;
            }

        @@keyframes categorySlide {
            from {
                transform: perspective(1200px) rotateY(30deg);
                opacity: 0;
            }

            to {
                transform: perspective(1200px) rotateY(0deg);
                opacity: 1;
            }
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            filter: drop-shadow(0 2px 4px rgba(0,0,0,0.5));
            transition: transform 0.3s ease;
        }

            .carousel-control-prev-icon:hover,
            .carousel-control-next-icon:hover {
                transform: scale(1.1) rotate(5deg);
            }

        /* ========================
                   NUEVOS KEYFRAMES ADICIONALES
                   ======================== */
        @@keyframes flash {
            0% {
                opacity: 1;
            }

            50% {
                opacity: 0.5;
            }

            100% {
                opacity: 1;
            }
        }

        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }

            40% {
                transform: translateY(-30px);
            }

            60% {
                transform: translateY(-15px);
            }
        }

        @@keyframes swing {
            20% {
                transform: rotate3d(0, 0, 1, 15deg);
            }

            40% {
                transform: rotate3d(0, 0, 1, -10deg);
            }

            60% {
                transform: rotate3d(0, 0, 1, 5deg);
            }

            80% {
                transform: rotate3d(0, 0, 1, -5deg);
            }

            100% {
                transform: rotate3d(0, 0, 1, 0deg);
            }
        }

        @@keyframes zoomIn {
            from {
                transform: scale(0.5);
                opacity: 0;
            }

            to {
                transform: scale(1);
                opacity: 1;
            }
        }

        @@keyframes flipInX {
            from {
                transform: perspective(400px) rotateX(90deg);
                opacity: 0;
            }

            40% {
                transform: perspective(400px) rotateX(-10deg);
                opacity: 1;
            }

            70% {
                transform: perspective(400px) rotateX(10deg);
            }

            100% {
                transform: perspective(400px) rotateX(0deg);
            }
        }

        @@keyframes flipInY {
            from {
                transform: perspective(400px) rotateY(90deg);
                opacity: 0;
            }

            40% {
                transform: perspective(400px) rotateY(-10deg);
                opacity: 1;
            }

            70% {
                transform: perspective(400px) rotateY(10deg);
            }

            100% {
                transform: perspective(400px) rotateY(0deg);
            }
        }

        @@keyframes rotateIn {
            from {
                transform: rotate(-200deg);
                opacity: 0;
            }

            to {
                transform: rotate(0);
                opacity: 1;
            }
        }
        /* Clases para aplicar las nuevas animaciones */
        .animate-flash {
            animation: flash 2s ease-in-out infinite;
        }

        .animate-bounce {
            animation: bounce 1s ease;
        }

        .animate-swing {
            animation: swing 1.5s ease-in-out;
        }

        .animate-zoom {
            animation: zoomIn 0.5s ease-out;
        }

        .animate-flip-x {
            animation: flipInX 0.7s ease-out;
        }

        .animate-flip-y {
            animation: flipInY 0.7s ease-out;
        }

        .animate-rotate {
            animation: rotateIn 0.7s ease-out;
        }
      

    </style>
</head>
<body>
    <!-- PRELOADER -->
    <div id="preloader">
        <div class="spinner"></div>
    </div>
    <!-- BOTÓN DARK MODE -->
    <button id="darkModeToggle" class="btn-neon">Dark Mode</button>
    <!-- HERO CAROUSEL CON SWIPER -->
    <div class="swiper myHeroSwiper">
        <div class="swiper-wrapper">
            <!-- Slide 1: Bienvenida -->
            <div class="swiper-slide" style="background-image: url('/Images/nuevo002.webp');">
                <div class="hero-overlay"></div>
                <i class="floating-icon icon-pos-1 fas fa-star animate-rotate"></i>
                <i class="floating-icon icon-pos-2 fas fa-heart animate-flash"></i>
                <i class="floating-emoji emoji-pos-1 animate-swing">🚀</i>
                <div class="hero-content container">
                    <h1 class="display-3 fw-bold glow-text animate-flip-x">
                        Bienvenido a Don Julio Súper <i class="fas fa-shopping-cart"></i>
                    </h1>
                    <p class="lead fs-4">Descubre el futuro de las compras online, donde cada detalle cuenta.</p>
                    <div class="mt-5">
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Productos" asp-action="Index" class="btn btn-neon me-2">Bodega</a>
                        }
                        <a asp-controller="Cart" asp-action="Index" class="btn btn-neon me-2">Mi Carrito</a>
                        <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-neon me-2">Control Admin</a>
                        <form asp-controller="Productos" asp-action="Search" method="get" class="d-inline-block">
                            <input type="text" name="searchTerm" placeholder="Buscar producto..." class="form-control d-inline-block" style="width: 200px;" />
                            <button type="submit" class="btn btn-neon">🔎 Buscar</button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Slide 2: Ofertas Exclusivas -->
            <div class="swiper-slide" style="background-image: url('/Images/saude-da-economia-local-por-que-valorizar-o-comercio-do-seu-bairro.jpg');">
                <div class="hero-overlay"></div>
                <i class="floating-icon icon-pos-2 fas fa-tags animate-bounce"></i>
                <i class="floating-emoji emoji-pos-2 animate-flip-y">✨</i>
                <div class="hero-content container">
                    <h1 class="display-3 fw-bold glow-text animate-zoom">
                        Ofertas Exclusivas <i class="fas fa-percentage"></i>
                    </h1>
                    <p class="lead fs-4">Descuentos únicos en productos seleccionados. ¡Aprovecha ya!</p>
                </div>
            </div>
            <!-- Slide 3: Confianza y Calidad -->
            <div class="swiper-slide" style="background-image: url('/Images/nueva.webp');">
                <div class="hero-overlay"></div>
                <i class="floating-icon icon-pos-3 fas fa-thumbs-up animate-swing"></i>
                <i class="floating-emoji emoji-pos-3 animate-flash">🌟</i>
                <div class="hero-content container">
                    <h1 class="display-3 fw-bold glow-text animate-flip-x">Confianza y Calidad</h1>
                    <p class="lead fs-4">Precios inigualables y garantía en cada producto.</p>
                </div>
            </div>
            <!-- Slide 4: Exclusividad -->
            <div class="swiper-slide" style="background-image: url('/Images/01210124555.PNG');">
                <div class="hero-overlay"></div>
                <i class="floating-icon icon-pos-4 fas fa-gem animate-rotate"></i>
                <i class="floating-emoji emoji-pos-2 animate-bounce">💎</i>
                <div class="hero-content container">
                    <h1 class="display-3 fw-bold glow-text animate-flip-y">
                        Exclusividad Garantizada <i class="fas fa-crown"></i>
                    </h1>
                    <p class="lead fs-4">Una experiencia que redefine el lujo en compras online.</p>
                </div>
            </div>
            <!-- Slide 5: Envíos Rápidos -->
            <div class="swiper-slide" style="background-image: url('/Images/95595.JPG');">
                <div class="hero-overlay"></div>
                <i class="floating-icon icon-pos-1 fas fa-truck animate-flash"></i>
                <i class="floating-emoji emoji-pos-1 animate-swing">🚚</i>
                <div class="hero-content container">
                    <h1 class="display-3 fw-bold glow-text animate-zoom">
                        Envíos Rápidos y Seguros <i class="fas fa-shipping-fast"></i>
                    </h1>
                    <p class="lead fs-4">Recibe tus compras en tiempo récord y con la seguridad que mereces.</p>
                </div>
            </div>
            <!-- Slide 6: Revolución Digital -->
            <div class="swiper-slide" style="background-image: url('/Images/01210.jpg');">
                <div class="hero-overlay"></div>
                <i class="floating-icon icon-pos-2 fas fa-users animate-rotate"></i>
                <i class="floating-emoji emoji-pos-3 animate-bounce">🌙</i>
                <div class="hero-content container">
                    <h1 class="display-3 fw-bold glow-text animate-flip-x">
                        Únete a la Revolución <i class="fas fa-user-friends"></i>
                    </h1>
                    <p class="lead fs-4">Sé parte de la nueva era del comercio electrónico.</p>
                </div>
            </div>
        </div>
        <!-- Swiper Pagination & Navigation -->
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    </div>
    <!-- SECCIÓN DE PRODUCTOS Y CATEGORÍAS -->
    <div class="container my-5">
        <h2 class="text-center mb-4">🛒 Productos y Categorías</h2>
        <div class="divider"></div>
        <div class="text-center mb-4">
            @if (User.IsInRole("Admin"))
            {
                <a asp-controller="Productos" asp-action="Index" class="btn btn-neon me-2">Bodega</a>
            }
            <a asp-controller="Productos" asp-action="Disponibles" class="btn btn-neon">Ver Productos Disponibles</a>
            <a asp-controller="Ofertas" asp-action="Reales" class="btn btn-neon">
                <i class="fa-solid fa-tags"></i> Ver Ofertas
            </a>
            <!-- Views/Home/Index.cshtml -->
            <a href="@Url.Action("Index", "Profile")" class="btn btn-neon">
                <i class="fa-solid fa-user"></i> Mi Perfil
            </a>



            <!-- Modal de Confirmación -->
            <div id="deleteModal" class="modal">
                <div class="modal-content">
                    <h2>¿Seguro que deseas eliminar tu cuenta?</h2>
                    <p>Esta acción es irreversible. Perderás todos tus datos.</p>
                    <div class="modal-buttons">
                        <button class="btn-cancel" onclick="closeModal()">Cancelar</button>
                        <form id="deleteForm" method="post" action="@Url.Action("DeleteAccount", "Home")">
                            <button type="submit" class="btn-confirm">Sí, eliminar</button>
                        </form>
                    </div>
                </div>
            </div>
            


        </div>
        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var product in Model)
                {
                    var isCanastaBasica = product.IsBasicBasket;
                    var isOnOffer = product.IsOnOffer;
                    var effectivePrice = product.Price * (isOnOffer ? (1 - product.DiscountPercentage / 100m) : 1);
                    var cardClasses = (isCanastaBasica ? "iva-free " : "") + (isOnOffer ? "on-offer " : "");
                    var catClass = categoryClass(product.Category.Name);
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm @catClass @cardClasses.Trim()" @(isOnOffer ? "data-discount='" + product.DiscountPercentage + "%'" : "")>
                            <img src="@product.ImageUrl" class="card-img-top animate-zoom" alt="@product.Name" loading="lazy" />
                            <div class="card-body">
