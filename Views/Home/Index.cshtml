                { role: "user", content: message }
              ],
              brandInfo: "Don Julio Súper, comercio electrónico de alta gama que innova constantemente."
            };

            const response = await fetch('/api/chat', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify(payload)
            });

            if (response.ok) {
              const data = await response.json();
              return data.response;
            } else {
              return "Lo siento, en este momento no puedo procesar tu solicitud.";
            }
          } catch (error) {
            console.error("Error al conectar con el servicio de IA:", error);
            return "Error al conectar con el servicio de IA.";
          }
        }

        // Función para enviar el mensaje y mostrar la respuesta del bot
        async function sendAdvancedMessage() {
          var input = document.getElementById("advancedChatInput");
          var message = input.value.trim();
          if (message !== "") {
            appendAdvancedMessage("Usuario", message);
            input.value = "";
            appendAdvancedTypingIndicator();
            let aiResponse = await getAIResponse(message);
            removeAdvancedTypingIndicator();
            appendAdvancedMessage("Bot", aiResponse);
          }
        }

        // Funciones para actualizar el área del chat
        function appendAdvancedMessage(sender, message) {
          var chatContent = document.getElementById("advancedChatContent");
          var p = document.createElement("p");
          p.style.margin = "0 0 10px 0";
          p.innerHTML = "<strong>" + sender + ":</strong> " + message.replace(/\n/g, "<br/>");
          p.style.animation = "fadeIn 0.6s ease-out";
          chatContent.appendChild(p);
          chatContent.scrollTop = chatContent.scrollHeight;
        }

        function appendAdvancedTypingIndicator() {
          var chatContent = document.getElementById("advancedChatContent");
          var indicator = document.createElement("p");
          indicator.id = "advancedTypingIndicator";
          indicator.style.fontStyle = "italic";
          indicator.style.color = "#888";
          indicator.textContent = "El bot está procesando...";
          indicator.style.animation = "fadeIn 0.4s ease-out";
          chatContent.appendChild(indicator);
          chatContent.scrollTop = chatContent.scrollHeight;
        }

        function removeAdvancedTypingIndicator() {
          var indicator = document.getElementById("advancedTypingIndicator");
          if (indicator) { indicator.remove(); }
        }

        // Función para mostrar/ocultar el chat avanzado
        function toggleAdvancedChat() {
          var chatBox = document.getElementById("advancedChatBox");
          if (chatBox.style.display === "none" || chatBox.style.display === "") {
            chatBox.style.display = "block";
            chatBox.style.animation = "fadeIn 0.4s";
          } else {
            chatBox.style.animation = "fadeOut 0.4s";
            setTimeout(() => { chatBox.style.display = "none"; }, 400);
          }
        }
                function confirmDelete() {
            document.getElementById("deleteModal").style.display = "flex";
        }

        function closeModal() {
            document.getElementById("deleteModal").style.display = "none";
        }


