                  if (star.x < 0) star.x += canvas.width;
                  else if (star.x > canvas.width) star.x -= canvas.width;
                  if (star.y < 0) star.y += canvas.height;
                  else if (star.y > canvas.height) star.y -= canvas.height;
                  star.phase += star.twinkleSpeed;
                });
              }

              function updatePlanets() {
                planets.forEach(planet => {
                  planet.x += planet.dx;
                  planet.y += planet.dy;
                  // Rebote en los bordes
                  if (planet.x - planet.radius < 0 || planet.x + planet.radius > canvas.width) {
                    planet.dx *= -1;
                  }
                  if (planet.y - planet.radius < 0 || planet.y + planet.radius > canvas.height) {
                    planet.dy *= -1;
                  }
                });
              }

              function updateSatellites() {
                satellites.forEach(sat => {
                  sat.angle += sat.orbitSpeed;
                });
              }

              function updateShootingStars() {
                // Esporádicamente se generan nuevas shooting stars
                if (Math.random() < 0.005) {
                  spawnShootingStar();
                }
                // Actualizar las existentes y eliminarlas al desvanecerse
                for (let i = shootingStars.length - 1; i >= 0; i--) {
                  let s = shootingStars[i];
                  s.x += s.dx;
                  s.y += s.dy;
                  s.alpha -= s.decay;
                  if (s.alpha <= 0) {
                    shootingStars.splice(i, 1);
                  }
                }
              }

              // -------------------------------
              // FUNCIONES DE DIBUJO
              // -------------------------------
              function drawStars() {
                stars.forEach(star => {
                  let alpha = star.baseAlpha + Math.sin(star.phase) * 0.3;
                  alpha = Math.max(0.3, Math.min(alpha, 1));
                  const gradient = ctx.createRadialGradient(star.x, star.y, 0, star.x, star.y, star.radius * 3);
                  gradient.addColorStop(0, `rgba(255,255,255,${alpha})`);
                  gradient.addColorStop(0.5, `rgba(255,255,255,${alpha * 0.5})`);
                  gradient.addColorStop(1, 'rgba(255,255,255,0)');
                  ctx.beginPath();
                  ctx.arc(star.x, star.y, star.radius, 0, Math.PI * 2);
                  ctx.fillStyle = gradient;
                  ctx.fill();
                });
              }

              function drawPlanets() {
                planets.forEach(planet => {
                  // Crea un degradado para dar un efecto de volumen
                  const gradient = ctx.createRadialGradient(
                    planet.x, planet.y, planet.radius * 0.3,
                    planet.x, planet.y, planet.radius
                  );
                  gradient.addColorStop(0, planet.color);
                  gradient.addColorStop(1, 'black');
                  ctx.beginPath();
                  ctx.arc(planet.x, planet.y, planet.radius, 0, Math.PI * 2);
                  ctx.fillStyle = gradient;
                  ctx.fill();
                });
              }

              function drawSatellites() {
                satellites.forEach(sat => {
                  const planet = planets[sat.planetIndex];
                  const satX = planet.x + sat.orbitRadius * Math.cos(sat.angle);
                  const satY = planet.y + sat.orbitRadius * Math.sin(sat.angle);
                  ctx.beginPath();
                  ctx.arc(satX, satY, sat.radius, 0, Math.PI * 2);
                  ctx.fillStyle = sat.color;
                  ctx.fill();
                });
              }

              function drawShootingStars() {
                shootingStars.forEach(s => {
                  ctx.beginPath();
                  ctx.arc(s.x, s.y, s.radius, 0, Math.PI * 2);
                  ctx.fillStyle = `rgba(255, 255, 255, ${s.alpha})`;
                  ctx.fill();
                });
              }

              // -------------------------------
              // BUCLE DE ANIMACIÓN
              // -------------------------------
              function animate() {
                // Efecto de desvanecimiento: se pinta un rectángulo semi-transparente en cada frame
                ctx.fillStyle = 'rgba(0, 0, 0, 0.2)';
                ctx.fillRect(0, 0, canvas.width, canvas.height);

                updateStars();
                updatePlanets();
                updateSatellites();
                updateShootingStars();

                drawStars();
                drawPlanets();
                drawSatellites();
                drawShootingStars();

                requestAnimationFrame(animate);
              }

              // Inicializamos todos los elementos y comenzamos la animación
              initStars();
              initPlanets();
              initSatellites();
              animate();
            })();
