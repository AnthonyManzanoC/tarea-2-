        /* Variables globales y fondo dinámico minimalista */
        :root {
            --bg-gradient-start: #1e3c72;
            --bg-gradient-end: #2a5298;
            --primary-color: #fff;
            --accent-color: #ff7f50;
            --highlight-color: #ff6347;
            --shadow-color: rgba(0, 0, 0, 0.5);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, var(--bg-gradient-start), var(--bg-gradient-end));
            animation: gradientShift 25s ease infinite;
            color: var(--primary-color);
            overflow-x: hidden;
            perspective: 1200px;
            margin: 0;
        }
        /* Animación de gradiente */
        @@keyframes gradientShift {
            0%

        {
            background: linear-gradient(135deg, #1e3c72, #2a5298);
        }

        50% {
            background: linear-gradient(135deg, #2a5298, #1e3c72);
        }

        100% {
            background: linear-gradient(135deg, #1e3c72, #2a5298);
        }

        }

        * {
            box-sizing: border-box;
        }

        .container {
            max-width: 1000px;
            margin: 4rem auto;
            padding: 2rem;
        }
        /* Carrusel corporativo */
        .brand-carousel .carousel-item {
            height: 500px;
            background-size: cover;
            background-position: center;
            position: relative;
            transform-style: preserve-3d;
            animation: slideImpact 1s ease-out forwards;
        }

        @@keyframes slideImpact {
            from

        {
            opacity: 0;
            transform: translateY(50px) rotateX(10deg) scale(0.95);
        }

        to {
            opacity: 1;
            transform: translateY(0) rotateX(0deg) scale(1);
        }

        }

        .brand-carousel .carousel-item::before {
            content: "";
            position: absolute;
            inset: 0;
            background: rgba(0, 0, 0, 0.4);
            animation: overlayPulse 4s ease-in-out infinite alternate;
        }

        @@keyframes overlayPulse {
            from

        {
            opacity: 0.4;
        }

        to {
            opacity: 0.6;
        }

        }

        .brand-carousel .carousel-caption {
            bottom: 40%;
            z-index: 2;
            text-shadow: 0 2px 8px var(--shadow-color);
            animation: captionEntrance 1s ease-out forwards;
        }

        @@keyframes captionEntrance {
            from

        {
            opacity: 0;
            transform: translateY(30px) scale(0.95);
        }

        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }

        }

        .brand-carousel .carousel-caption h2 {
            font-size: 3.5rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .brand-carousel .carousel-caption p {
            font-size: 1.5rem;
            opacity: 0.8;
        }
        /* Header corporativo minimalista */
        header {
            text-align: center;
            margin-bottom: 3rem;
            opacity: 0;
            transform: translateY(-30px);
            animation: headerFadeIn 1s ease-out forwards;
        }

        @@keyframes headerFadeIn {
            from

        {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        header h1 {
            font-size: 3rem;
            text-transform: uppercase;
            letter-spacing: 3px;
            margin-bottom: 0.5rem;
        }

        header p {
            font-size: 1.2rem;
            opacity: 0.8;
        }
        /* Timeline inteligente */
        .timeline {
            position: relative;
            margin: 2rem 0;
            padding-left: 40px;
            border-left: 3px solid var(--accent-color);
        }

        .timeline-item {
            position: relative;
            margin-bottom: 2rem;
            padding-left: 20px;
            opacity: 0;
            transform: translateX(-50px);
        }

            .timeline-item::before {
                content: "";
                position: absolute;
                left: -30px;
                top: 0;
                width: 20px;
                height: 20px;
                background: var(--highlight-color);
                border: 3px solid var(--accent-color);
                border-radius: 50%;
                box-shadow: 0 2px 8px var(--shadow-color);
                transition: transform 0.3s ease;
            }

            .timeline-item:hover::before {
                transform: scale(1.3);
            }

            .timeline-item h3 {
                font-size: 1.5rem;
                margin-bottom: 0.3rem;
            }

            .timeline-item span {
                font-size: 0.9rem;
                opacity: 0.7;
            }

            .timeline-item p {
                margin-top: 0.5rem;
                font-size: 1rem;
                line-height: 1.4;
            }
        /* Sección narrativa avanzada */
        .narrative {
            margin: 4rem 0;
            padding: 2rem;
            background: rgba(0,0,0,0.3);
            border-radius: 10px;
            box-shadow: 0 4px 15px var(--shadow-color);
            opacity: 0;
            transform: translateY(50px);
        }

            .narrative h2 {
                font-size: 2.5rem;
                text-transform: uppercase;
                margin-bottom: 1rem;
                color: var(--accent-color);
            }

            .narrative p {
                font-size: 1.2rem;
                line-height: 1.6;
                text-align: justify;
            }
        /* Sección corporativa: Experiencia */
        .corporate {
            margin: 4rem 0;
            padding: 2rem;
            background: rgba(255,255,255,0.1);
            border-radius: 10px;
            box-shadow: 0 4px 15px var(--shadow-color);
            opacity: 0;
            transform: translateY(50px);
        }

            .corporate h2 {
                font-size: 2.5rem;
                text-transform: uppercase;
                text-align: center;
                margin-bottom: 2rem;
                color: var(--highlight-color);
            }

        .cards {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .card {
            background: rgba(0,0,0,0.4);
            border-radius: 10px;
            padding: 20px;
            flex: 1 1 300px;
            max-width: 300px;
            box-shadow: 0 4px 10px var(--shadow-color);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 8px 20px var(--shadow-color);
            }

            .card h3 {
                font-size: 1.8rem;
                margin-bottom: 10px;
            }

            .card p {
                font-size: 1rem;
                line-height: 1.4;
            }
        /* Botón "Descubre más" */
        .btn-more {
            display: inline-block;
            margin: 3rem auto 0;
            padding: 1rem 2rem;
            background: linear-gradient(90deg, var(--accent-color), var(--highlight-color));
            color: var(--primary-color);
            text-transform: uppercase;
            font-weight: 700;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            box-shadow: 0 5px 15px var(--shadow-color);
            transition: transform 0.3s, box-shadow 0.3s;
            animation: btnPulse 2s infinite alternate;
        }

        @@keyframes btnPulse {
            from

        {
            transform: scale(1);
        }

        to {
            transform: scale(1.05);
        }

        }

        .btn-more:hover {
            transform: scale(1.1);
            box-shadow: 0 10px 25px var(--shadow-color);
        }
        /* Modal corporativo */
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.8);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 100;
        }

        .modal-content {
            background: rgba(34,34,34,0.95);
            padding: 2rem;
            border-radius: 10px;
            max-width: 600px;
            text-align: center;
            position: relative;
            opacity: 0;
            transform: scale(0.5);
            box-shadow: 0 8px 30px var(--shadow-color);
            animation: modalIn 0.8s ease-out forwards;
        }

        @@keyframes modalIn {
            from

        {
            opacity: 0;
            transform: scale(0.5) rotate(-15deg);
        }

        to {
            opacity: 1;
            transform: scale(1) rotate(0deg);
        }

        }

        .modal-content h2 {
            margin-bottom: 1rem;
            font-size: 2rem;
            text-transform: uppercase;
            color: var(--accent-color);
        }

        .modal-content p {
            font-size: 1.1rem;
            line-height: 1.6;
        }

        .modal-close {
            position: absolute;
            top: 10px;
            right: 10px;
            background: var(--accent-color);
            border: none;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            cursor: pointer;
            font-weight: bold;
            color: #222;
        }
        /* 30 keyframes adicionales para efectos únicos */
        @@keyframes fadeInSlow {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }

        @@keyframes fadeOutFast {
            from

        {
            opacity: 1;
        }

        to {
            opacity: 0;
        }

        }

        @@keyframes slideInUp {
            from

        {
            transform: translateY(100%);
        }

        to {
            transform: translateY(0);
        }

        }

        @@keyframes slideInDown {
            from

        {
            transform: translateY(-100%);
        }

        to {
            transform: translateY(0);
        }

        }

        @@keyframes slideOutLeft {
            from

        {
            transform: translateX(0);
        }

        to {
            transform: translateX(-100%);
        }

        }

        @@keyframes slideOutRight {
            from

        {
            transform: translateX(0);
        }

        to {
            transform: translateX(100%);
        }

        }

        @@keyframes rotateIn90 {
            from

        {
            transform: rotate(-90deg);
        }

        to {
            transform: rotate(0deg);
        }

        }

        @@keyframes rotateOut90 {
            from

        {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(90deg);
        }

        }

        @@keyframes bounceInUp {
            0%

        {
            transform: translateY(100%);
        }

        60% {
            transform: translateY(-20%);
        }

        100% {
            transform: translateY(0);
        }

        }

        @@keyframes bounceOutDown {
            0%

        {
            transform: translateY(0);
        }

        60% {
            transform: translateY(20%);
        }

        100% {
            transform: translateY(100%);
        }

        }
        @@keyframes zoomInQuick {
            from

        {
            transform: scale(0.5);
        }

        to {
            transform: scale(1);
        }

        }

        @@keyframes zoomOutQuick {
            from

        {
            transform: scale(1);
        }

        to {
            transform: scale(0.5);
        }

        }
        @@keyframes flipInX {
            from

        {
            transform: perspective(400px) rotateX(90deg);
            opacity: 0;
        }

        to {
            transform: perspective(400px) rotateX(0deg);
            opacity: 1;
        }

        }
        @@keyframes flipOutX {
            from

        {
            transform: perspective(400px) rotateX(0deg);
            opacity: 1;
        }

        to {
            transform: perspective(400px) rotateX(90deg);
            opacity: 0;
        }

        }
        @@keyframes flipInY {
            from

        {
            transform: perspective(400px) rotateY(90deg);
            opacity: 0;
        }

        to {
            transform: perspective(400px) rotateY(0deg);
            opacity: 1;
        }

        }
        @@keyframes flipOutY {
            from

        {
            transform: perspective(400px) rotateY(0deg);
            opacity: 1;
        }

        to {
            transform: perspective(400px) rotateY(90deg);
            opacity: 0;
        }

        }
        @@keyframes shadowPulse {
            from

        {
            box-shadow: 0 0 5px var(--shadow-color);
        }

        to {
            box-shadow: 0 0 20px var(--shadow-color);
        }

        }

        @@keyframes colorCycle {
            0%

        {
            filter: hue-rotate(0deg);
        }

        100% {
            filter: hue-rotate(360deg);
        }

        }

        @@keyframes wobble {
            0%

        {
            transform: rotate(0deg);
        }

        25% {
            transform: rotate(5deg);
        }

        50% {
            transform: rotate(0deg);
        }

        75% {
            transform: rotate(-5deg);
        }

        100% {
            transform: rotate(0deg);
        }

        }

        @@keyframes swing {
            20%

        {
            transform: rotate3d(0, 0, 1, 15deg);
        }

        40% {
            transform: rotate3d(0, 0, 1, -10deg);
        }

        60% {
            transform: rotate3d(0, 0, 1, 5deg);
        }

        80% {
            transform: rotate3d(0, 0, 1, -5deg);
        }

        100% {
            transform: rotate3d(0, 0, 1, 0deg);
        }

        }

        @@keyframes pulseFast {
            0%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.1);
        }

        100% {
            transform: scale(1);
        }

        }

        @@keyframes jiggle {
            0%

        {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-5px);
        }

        50% {
            transform: translateX(5px);
        }

        75% {
            transform: translateX(-5px);
        }

        100% {
            transform: translateX(0);
        }

        }

        @@keyframes drift {
            from

        {
            transform: translateX(-50px);
        }

        to {
            transform: translateX(50px);
        }

        }

        @@keyframes rise {
            from

        {
            transform: translateY(50px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }

        }

        @@keyframes fall {
            from

        {
            transform: translateY(0);
            opacity: 1;
        }

        to {
            transform: translateY(50px);
            opacity: 0;
        }

        }

        @@keyframes shimmer {
            0%

        {
            background-position: -500px 0;
        }

        100% {
            background-position: 500px 0;
        }

        }

        @@keyframes glitch {
            0%

        {
            clip-path: inset(0 0 0 0);
        }

        50% {
            clip-path: inset(10% 0 20% 0);
        }

        100% {
            clip-path: inset(0 0 0 0);
        }

        }

        @@keyframes driftRotate {
            from

        {
            transform: translateX(-30px) rotate(-5deg);
        }

        to {
            transform: translateX(30px) rotate(5deg);
        }

        }

        @@keyframes scalePulse {
            0%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        100% {
            transform: scale(1);
        }

        }

        @@keyframes orbit {
            from

        {
            transform: rotate(0deg) translateX(0);
        }

        to {
            transform: rotate(360deg) translateX(0);
        }

        }

        @@keyframes slideZoomIn {
            from

        {
            transform: translateX(-100%) scale(0.5);
            opacity: 0;
        }

        to {
            transform: translateX(0) scale(1);
            opacity: 1;
