        /* Función genérica robusta para animar elementos con validación, stagger y callbacks */
        function robustAnimate(selector, fromProps, toProps, options = {}) {
          try {
            const elements = document.querySelectorAll(selector);
            if (!elements.length) throw new Error(`No se encontró ningún elemento para ${selector}`);
            elements.forEach((el, index) => {
              gsap.fromTo(el, fromProps, {
                ...toProps,
                delay: (options.delay || 0) + index * (options.stagger || 0),
                onComplete: () => {
                  if (typeof options.callback === "function") options.callback(el);
                }
              });
            });
          } catch (error) {
            console.error("Error en robustAnimate:", error);
          }
        }

