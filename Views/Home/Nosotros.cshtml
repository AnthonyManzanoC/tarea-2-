              // INICIALIZAR ESTRELLAS (fijas y fugaces)
              // -------------------------------
              const numStars = 500;
              function initStars() {
                for (let i = 0; i < numStars; i++) {
                  const type = Math.random();
                  let radius, baseAlpha, twinkleSpeed, dx, dy;
                  if (type < 0.7) { // 70% estrellas pequeñas
                    radius = Math.random() * 0.6 + 0.2;
                    baseAlpha = Math.random() * 0.5 + 0.5;
                    twinkleSpeed = Math.random() * 0.01 + 0.005;
                    dx = (Math.random() - 0.5) * 0.2;
                    dy = (Math.random() - 0.5) * 0.2;
                  } else if (type < 0.95) { // 25% estrellas grandes
                    radius = Math.random() * 1.5 + 1.0;
                    baseAlpha = Math.random() * 0.3 + 0.7;
                    twinkleSpeed = Math.random() * 0.02 + 0.008;
                    dx = (Math.random() - 0.5) * 0.1;
                    dy = (Math.random() - 0.5) * 0.1;
                  } else { // 5% estrellas fugaces (ya incluidas en shootingStars también)
                    radius = Math.random() * 1.5 + 1.0;
                    baseAlpha = 1;
                    twinkleSpeed = Math.random() * 0.05 + 0.02;
                    dx = (Math.random() - 0.5) * 2;
                    dy = (Math.random() - 0.5) * 2;
                  }
                  stars.push({
                    x: Math.random() * canvas.width,
                    y: Math.random() * canvas.height,
                    radius,
                    baseAlpha,
                    twinkleSpeed,
                    phase: Math.random() * Math.PI * 2,
                    dx,
                    dy,
                  });
                }
              }

              // -------------------------------
              // INICIALIZAR PLANETAS
              // -------------------------------
              const numPlanets = 5;
              function initPlanets() {
                for (let i = 0; i < numPlanets; i++) {
                  planets.push({
                    x: Math.random() * canvas.width,
                    y: Math.random() * canvas.height,
                    radius: Math.random() * 30 + 20, // entre 20 y 50
                    color: `hsl(${Math.random() * 360}, 70%, 50%)`,
                    dx: (Math.random() - 0.5) * 0.5,
                    dy: (Math.random() - 0.5) * 0.5,
                  });
                }
              }

              // -------------------------------
              // INICIALIZAR SATÉLITES (orbita de cada planeta)
              // -------------------------------
              function initSatellites() {
                planets.forEach((planet, index) => {
                  // Cada planeta tendrá entre 1 y 3 satélites
                  const numSats = Math.floor(Math.random() * 3) + 1;
                  for (let j = 0; j < numSats; j++) {
                    satellites.push({
                      planetIndex: index,
                      orbitRadius: planet.radius + Math.random() * 20 + 10, // distancia de órbita
                      angle: Math.random() * Math.PI * 2,
                      orbitSpeed: (Math.random() * 0.02 + 0.01) * (Math.random() < 0.5 ? 1 : -1),
                      radius: Math.random() * 3 + 2, // tamaño del satélite
                      color: 'gray'
                    });
                  }
                });
              }

              // -------------------------------
              // FUNCIONES PARA LAS ESTRELLAS FUGACES (shooting stars)
              // -------------------------------
              function spawnShootingStar() {
                shootingStars.push({
                  x: Math.random() * canvas.width,
                  y: 0, // se inicia desde arriba
                  dx: (Math.random() * 4) + 4, // velocidad horizontal rápida
                  dy: (Math.random() * 2) + 2, // velocidad vertical rápida
