                rotation: 0,
                duration: 1,
                ease: "power3.out",
                scrollTrigger: {
                  trigger: item,
                  start: "top 85%",
                  toggleActions: "play none none reverse"
                },
                delay: i * 0.2
              }
            );
          });
        }

        /* Función que orquesta todas las animaciones de la vista */
        function initAnimations() {
          robustAnimate("header", { opacity: 0, y: -30 }, { opacity: 1, y: 0, duration: 1, ease: "power3.out", delay: 0.5 });
          robustAnimate('header h1', { opacity: 0, y: -50 }, { opacity: 1, y: 0, duration: 1, ease: "power3.out" });
          robustAnimate('header p', { opacity: 0, y: 50 }, { opacity: 1, y: 0, duration: 1, ease: "power3.out" });
          gsap.to("#narrative", {
            scrollTrigger: { trigger: "#narrative", start: "top 80%" },
            duration: 1.2,
            opacity: 1,
            y: 0,
            ease: "power3.out"
          });
          gsap.to("#corporate-carousel", {
            scrollTrigger: { trigger: "#corporate-carousel", start: "top 80%" },
            duration: 1.2,
            opacity: 1,
            y: 0,
            ease: "power3.out"
          });
          // Animación para el carrusel principal
          var carousel = document.getElementById('brandCarousel');
          carousel.addEventListener('slide.bs.carousel', function (e) {
            gsap.fromTo(e.relatedTarget.querySelector('.carousel-caption'),
              { opacity: 0, y: 50, scale: 0.8 },
              { opacity: 1, y: 0, scale: 1, duration: 1, ease: "power3.out" }
            );
          });
          animateTimelineItems();
          robustAnimate('.card', { opacity: 0, scale: 0.8 }, { opacity: 1, scale: 1, duration: 1, ease: "bounce.out" });
        }
        document.addEventListener("DOMContentLoaded", initAnimations);

            // Función para abrir el modal de cada "Ver Detalle" en el carrusel
            document.querySelectorAll('.btn-ver-detalle').forEach(button => {
              button.addEventListener('click', (e) => {
                e.preventDefault();
                const modalType = button.getAttribute('data-modal');
                if (modalType === 'vision') {
                  const modal = document.getElementById('visionModal');
                  modal.style.display = "flex";
                  gsap.fromTo(modal.querySelector('.modal-content'), { scale: 0.8, opacity: 0 }, { scale: 1, opacity: 1, duration: 0.8, ease: "back.out(1.7)" });
                } else if (modalType === 'mission') {
                  const modal = document.getElementById('missionModal');
                  modal.style.display = "flex";
                  gsap.fromTo(modal.querySelector('.modal-content'), { scale: 0.8, opacity: 0 }, { scale: 1, opacity: 1, duration: 0.8, ease: "back.out(1.7)" });
                }
              });
            });

            // Función para abrir el modal corporativo con el botón "Descubre más" (funcionalidad original)
            document.getElementById('btn-more').addEventListener('click', () => {
              gsap.to(".container", {
                duration: 1.2,
                rotationY: "+=360",
                ease: "power4.inOut",
                onComplete: () => {
                  document.getElementById('modal-overlay').style.display = "flex";
                  gsap.fromTo(document.getElementById('modal-overlay').querySelector('.modal-content'), { scale: 0.8, opacity: 0 }, { scale: 1, opacity: 1, duration: 0.8, ease: "back.out(1.7)" });
                }
              });
            });

            // Función para cerrar cualquier modal al pulsar su botón de cierre
            document.querySelectorAll('.modal-overlay .modal-close').forEach(btn => {
              btn.addEventListener('click', (e) => {
                const modal = e.target.closest('.modal-overlay');
                gsap.to(modal.querySelector('.modal-content'), { scale: 0.8, opacity: 0, duration: 0.5, ease: "power2.in", onComplete: () => {
                  modal.style.display = "none";
                }});
              });
            });

        // Abrir modal de video
        document.getElementById('btn-video').addEventListener('click', () => {
          document.getElementById('modal-video').style.display = "flex";
          gsap.fromTo(document.getElementById('modal-video').querySelector('.modal-content'), { opacity: 0, scale: 0.8 }, { opacity: 1, scale: 1, duration: 1, ease: "power3.out" });
        });

        // Cerrar modales (para cualquier modal) al pulsar el botón de cierre
        document.querySelectorAll('.modal-overlay .modal-close').forEach(btn => {
          btn.addEventListener('click', (e) => {
            const modal = e.target.closest('.modal-overlay');
            gsap.to(modal.querySelector('.modal-content'), { scale: 0.8, opacity: 0, duration: 0.5, ease: "power2.in", onComplete: () => {
              modal.style.display = "none";
            }});
          });
        });

        // Cerrar modal de video
        document.getElementById('modal-video-close').addEventListener('click', () => {
          const modalVideo = document.getElementById('modal-video');
          gsap.to(modalVideo.querySelector('.modal-content'), { opacity: 0, scale: 0.8, duration: 0.5, ease: "power2.in", onComplete: () => {
              modalVideo.style.display = "none";
          }});
        });
    </script>
</body>
