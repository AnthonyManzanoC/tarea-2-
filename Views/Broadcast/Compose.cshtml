@{
    ViewData["Title"] = "Enviar Promoción";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap');

    :root {
        --primary-color: #4CAF50;
        --secondary-color: #ffffff;
        --bg-color: #0d0d0d;
        --container-bg: rgba(255, 255, 255, 0.08);
        --border-color: rgba(255, 255, 255, 0.2);
        --shadow-color: rgba(0, 0, 0, 0.7);
    }

    body {
        font-family: 'Inter', sans-serif;
        background: linear-gradient(135deg, #0a0a0a, #1a1a1a);
        color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        animation: bgShift 20s ease infinite;
    }

    @@keyframes bgShift {
        0%

    {
        background-position: 0% 50%;
    }

    50% {
        background-position: 100% 50%;
    }

    100% {
        background-position: 0% 50%;
    }

    }

    .promo-container {
        background: var(--container-bg);
        backdrop-filter: blur(12px);
        border-radius: 16px;
        padding: 40px;
        max-width: 600px;
        text-align: center;
        box-shadow: 0 15px 30px var(--shadow-color);
        animation: fadeInUp 1.5s ease-out forwards;
    }

    @@keyframes fadeInUp {
        0%

    {
        opacity: 0;
        transform: translateY(30px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }

    h2 {
        font-size: 2rem;
        margin-bottom: 20px;
        color: var(--primary-color);
        animation: textPulse 3s infinite;
    }

    @@keyframes textPulse {
        0%, 100%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.05);
    }

    }

    .form-control {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid var(--border-color);
        color: var(--secondary-color);
        transition: all 0.3s ease;
        font-size: 1rem;
        padding: 12px;
        border-radius: 8px;
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 10px var(--primary-color);
        }

    .btn-primary {
        background: var(--primary-color);
        border: none;
        padding: 14px;
        width: 100%;
        font-size: 1.2rem;
        border-radius: 50px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .btn-primary:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 20px var(--shadow-color);
        }

    .btn-secondary {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        width: 100%;
        padding: 14px;
        font-size: 1rem;
        border-radius: 50px;
        background: rgba(255, 255, 255, 0.2);
        color: var(--primary-color);
        border: 1px solid var(--primary-color);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-secondary:hover {
            background: var(--primary-color);
            color: #111;
        }

    .promo-icon {
        font-size: 3rem;
        color: var(--primary-color);
        animation: rotateIcon 2s linear infinite alternate;
    }

    @@keyframes rotateIcon {
        0%

    {
        transform: rotate(-10deg);
    }

    100% {
        transform: rotate(10deg);
    }

    }

    .success-message {
        background: rgba(76, 175, 80, 0.2);
        padding: 12px;
        border-radius: 8px;
        border-left: 5px solid var(--primary-color);
        color: var(--primary-color);
        margin-bottom: 15px;
        animation: fadeIn 1.2s ease-out;
    }

    @@keyframes fadeIn {
        0%

    {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }

    }
</style>

<div class="promo-container">
    <h2><i class="fas fa-bullhorn promo-icon"></i> Enviar Promoción</h2>

    @if (TempData["Success"] != null)
    {
        <div class="success-message">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
        </div>
    }

    <form asp-action="Send" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="emailPreset" class="form-label">Mensaje Principal</label>
            <textarea class="form-control" id="emailPreset" name="emailPreset" rows="4" placeholder="Escribe tu mensaje principal aquí..."></textarea>
        </div>
        <div class="mb-3">
            <label for="emailAdditional" class="form-label">Mensaje Adicional (opcional)</label>
            <textarea class="form-control" id="emailAdditional" name="emailAdditional" rows="4" placeholder="Escribe un mensaje adicional aquí..."></textarea>
        </div>
        <div class="mb-3">
            <label for="imageFile" class="form-label">Imagen de Promoción</label>
            <input class="form-control" type="file" id="imageFile" name="imageFile" accept="image/*">
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-paper-plane"></i> Enviar a Todos
        </button>

        <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary mt-3">
            <i class="fas fa-arrow-left"></i> Volver al Dashboard
        </a>
    </form>
</div>
