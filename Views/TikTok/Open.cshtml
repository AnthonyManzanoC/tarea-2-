@{
    ViewData["Title"] = "Abrir TikTok";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap');

    :root {
        --tiktok-teal: #69C9D0;
        --tiktok-red: #EE1D52;
        --bg-overlay: rgba(255, 255, 255, 0.15);
        --shadow-color: rgba(0, 0, 0, 0.5);
        --gradient-text: linear-gradient(90deg, var(--tiktok-teal), var(--tiktok-red));
    }

    /* Fondo avanzado con gradiente oscuro, animación de posición y brillo */
    body {
        font-family: 'Inter', sans-serif;
        color: #fff;
        background: linear-gradient(45deg, #333, #0f0c29, #69C9D0);
        background-size: 300% 300%;
        overflow: hidden;
        position: relative;
        animation: bgTikTok 30s ease infinite, bgBrightness 5s ease-in-out infinite;
    }

    @@keyframes bgTikTok {
        0% {
            background-position: 0% 50%;
        }

        25% {
            background-position: 50% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        75% {
            background-position: 50% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    @@keyframes bgBrightness {
        0%, 100% {
            filter: brightness(1);
        }

        50% {
            filter: brightness(1.1);
        }
    }

    /* Contenedor avanzado: translúcido con blur, animaciones 3D y flotación rítmica */
    .dashboard-container {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(12px);
        padding: 50px;
        border-radius: 20px;
        box-shadow: 0 20px 40px var(--shadow-color);
        border: 1px solid rgba(255,255,255,0.3);
        max-width: 600px;
        margin: auto;
        transform-style: preserve-3d;
        animation: containerTikTok 2s cubic-bezier(0.22, 1, 0.36, 1) forwards, containerFloat 4s ease-in-out infinite;
        transform: perspective(1000px) translateZ(0);
    }

    @@keyframes containerTikTok {
        0% {
            opacity: 0;
            transform: perspective(1000px) translateY(40px) rotateX(10deg) scale(0.95);
        }

        50% {
            opacity: 0.7;
            transform: perspective(1000px) translateY(-5px) rotateX(-3deg) scale(1.03);
        }

        100% {
            opacity: 1;
            transform: perspective(1000px) translateY(0) rotateX(0deg) scale(1);
        }
    }

    @@keyframes containerFloat {
        0% {
            transform: translateY(0px);
        }

        25% {
            transform: translateY(-10px);
        }

        50% {
            transform: translateY(0px);
        }

        75% {
            transform: translateY(10px);
        }

        100% {
            transform: translateY(0px);
        }
    }

    /* Título avanzado con efecto shimmer, gradiente y glitch */
    h2 {
        font-weight: 600;
        text-align: center;
        font-size: 2.8rem;
        margin-bottom: 20px;
        text-transform: uppercase;
        background: var(--gradient-text);
        background-size: 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: titleShimmer 3s ease-in-out infinite, titleGlitch 4s infinite;
        position: relative;
    }

    @@keyframes titleShimmer {
        0% {
            background-position: 0%;
        }

        50% {
            background-position: 100%;
        }

        100% {
            background-position: 0%;
        }
    }

    @@keyframes titleGlitch {
        0%, 20%, 40%, 60%, 80%, 100% {
            clip-path: inset(0 0 0 0);
            transform: translate(0);
        }

        10% {
            clip-path: inset(10% 0 80% 0);
            transform: translate(-2px, -2px);
        }

        30% {
            clip-path: inset(20% 0 60% 0);
            transform: translate(2px, 2px);
        }

        50% {
            clip-path: inset(30% 0 40% 0);
            transform: translate(-2px, 0);
        }

        70% {
            clip-path: inset(20% 0 60% 0);
            transform: translate(2px, -2px);
        }

        90% {
            clip-path: inset(10% 0 80% 0);
            transform: translate(-2px, 2px);
        }
    }

    /* Botón avanzado: animaciones de entrada, pulso, rotación y efecto glitch en el icono */
    .btn-animated {
        position: relative;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 18px 36px;
        margin: 20px auto;
        border: none;
        border-radius: 50px;
        font-size: 1.1rem;
        cursor: pointer;
        background: var(--bg-overlay);
        color: #fff;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
        animation: buttonEntry 1s ease-out forwards, buttonPulse 4s ease-in-out infinite;
    }

    @@keyframes buttonEntry {
        0% {
            opacity: 0;
            transform: translateY(20px) scale(0.95);
        }

        100% {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    @@keyframes buttonPulse {
        0%, 100% {
            transform: scale(1);
        }

        25% {
            transform: scale(1.05) rotate(1deg);
        }

        50% {
            transform: scale(1.1) rotate(-1deg);
        }

        75% {
            transform: scale(1.05) rotate(1deg);
        }
    }

    .btn-animated:hover {
        transform: scale(1.15) rotate(-3deg);
        box-shadow: 0 10px 25px var(--shadow-color);
    }

    .btn-animated i {
        margin-right: 10px;
        animation: iconRotate 2.5s linear infinite, iconGlitch 3s infinite;
    }

    @@keyframes iconRotate {
        0% {
            transform: rotate(0deg) scale(1);
        }

        25% {
            transform: rotate(90deg) scale(1.1);
        }

        50% {
            transform: rotate(180deg) scale(0.9);
        }

        75% {
            transform: rotate(270deg) scale(1.05);
        }

        100% {
            transform: rotate(360deg) scale(1);
        }
    }

    @@keyframes iconGlitch {
        0% {
            transform: translate(0);
        }

        20% {
            transform: translate(-2px, 2px);
        }

        40% {
            transform: translate(2px, -2px);
        }

        60% {
            transform: translate(-2px, -2px);
        }

        80% {
            transform: translate(2px, 2px);
        }

        100% {
            transform: translate(0);
        }
    }

    /* Texto de párrafo */
    .dashboard-container p {
        font-size: 1.1rem;
        margin-bottom: 30px;
    }
</style>

<div class="container mt-5">
    <div class="dashboard-container text-center">
        <h2 class="mb-4">Abrir TikTok Web</h2>
        <p>Haz clic en el botón para abrir TikTok.</p>
        <a asp-action="OpenTiktok" class="btn btn-outline-dark btn-animated">
            <i class="fab fa-tiktok"></i> Abrir TikTok
        </a>
    </div>
</div>
