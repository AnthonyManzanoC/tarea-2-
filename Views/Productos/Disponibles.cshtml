@model IEnumerable<CoronelExpress.Models.Product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Productos Disponibles";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <!-- Framer Motion (opcional) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/framer-motion/10.11.3/framer-motion.umd.min.js"></script>

    <style>
        /* Ajuste global para evitar barra blanca */
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow-x: hidden;
        }

        :root {
            /* Colores patrióticos */
            --primary-color: #ffcc00; /* Amarillo vibrante */
            --secondary-color: #003399; /* Azul intenso */
            --tertiary-color: #cc0000; /* Rojo profundo */
            /* Texto y acentos */
            --text-color: #B0B0B0; /* Oscuro para contraste */
            --overlay-color: rgba(255, 255, 255, 0.65);
            --glow-color: rgba(66, 230, 149, 0.8);
            --background-light: #fff;
            --background-dark: #121212;
        }

        body {
            background-color: var(--background-light);
            color: var(--text-color);
            font-family: 'Montserrat', sans-serif;
            transition: background-color 0.5s ease, color 0.5s ease;
        }

            body.dark-mode {
                background-color: var(--background-dark);
                color: #e0e0e0;
            }
        /* Preloader */
        #preloader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--primary-color);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 3000;
        }

        .spinner {
            width: 60px;
            height: 60px;
            border: 8px solid rgba(255,255,255,0.3);
            border-top: 8px solid #fff;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }
        /* Botón Dark Mode Toggle */
        #darkModeToggle {
            position: fixed;
            top: 130px;
            right: 20px;
            z-index: 1500;
            padding: 10px 20px;
            border-radius: 50px;
            font-weight: bold;
            background: linear-gradient(45deg, var(--accent-color), var(--primary-color));
            color: #fff;
            border: none;
            cursor: pointer;
            box-shadow: 0 0 10px var(--glow-color);
            transition: transform 0.3s ease;
        }

            #darkModeToggle:hover {
                transform: scale(1.05);
            }
        /* Divider futurista */
        .divider {
            height: 3px;
            background: linear-gradient(to right, transparent, var(--primary-color), transparent);
            margin: 20px auto;
            width: 50%;
        }
        /* Botón estilo Neon */
        .btn-neon {
            font-size: 1.2rem;
            padding: 12px 24px;
            border-radius: 50px;
            color: #fff;
            background: linear-gradient(45deg, var(--accent-color), var(--primary-color));
            box-shadow: 0 0 20px rgba(66,230,149,0.5);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            text-transform: uppercase;
            font-weight: bold;
            border: none;
            position: relative;
            overflow: hidden;
        }

            .btn-neon:hover {
                box-shadow: 0 0 30px var(--glow-color);
                transform: scale(1.08) rotateY(3deg);
            }
        /* Tarjetas de Producto */
        .card {
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
            position: relative;
        }

            .card:hover {
                transform: translateY(-5px) rotateY(2deg);
                box-shadow: 0 15px 30px rgba(0,0,0,0.15);
            }

        .card-img-top {
            height: 220px;
            object-fit: cover;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            transition: transform 0.5s ease;
        }

        .card:hover .card-img-top {
            transform: scale(1.05);
        }

        .card-body {
            padding: 20px;
            text-align: center;
        }

        .price {
            font-size: 1.4rem;
            font-weight: bold;
            color: var(--primary-color);
        }

        .stock {
            font-size: 1rem;
            color: #f2545b;
        }
        /* Input de búsqueda */
        .search-input {
            max-width: 400px;
            margin: 0 auto 20px auto;
        }
        /* Animación de aparición */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(15px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .product-item {
            opacity: 0;
        }
        /* NUEVOS ESTILOS PARA PRODUCTOS CON CONDICIONES ESPECIALES */
        .iva-free {
            border: 2px solid var(--accent-color);
            position: relative;
            animation: pulseBorder 3s infinite;
        }

        @@keyframes pulseBorder {
            0% {
                border-color: var(--accent-color);
            }

            50% {
                border-color: var(--primary-color);
            }

            100% {
                border-color: var(--accent-color);
            }
        }

        .iva-free::after {
            content: "Sin IVA";
            position: absolute;
            top: 10px;
            right: 10px;
            background: var(--accent-color);
            color: #fff;
            padding: 4px 8px;
            border-radius: 5px;
            font-size: 0.8rem;
            font-weight: bold;
        }

        .on-offer {
            border: 2px solid #ff6b81;
            position: relative;
            animation: shake 1.5s infinite;
        }

        @@keyframes shake {
            0%, 100% {
                transform: rotate(0deg);
            }

            25% {
                transform: rotate(1deg);
            }

            50% {
                transform: rotate(0deg);
            }

            75% {
                transform: rotate(-1deg);
            }
        }

        .on-offer::before {
            content: attr(data-discount) " OFF";
            position: absolute;
            top: 10px;
            left: 10px;
            background: #ff6b81;
            color: #fff;
            padding: 4px 8px;
            border-radius: 5px;
            font-size: 0.8rem;
            font-weight: bold;
        }
        /* NUEVOS KEYFRAMES ADICIONALES */
        @@keyframes flash {
            0% {
                opacity: 1;
            }

            50% {
                opacity: 0.5;
            }

            100% {
                opacity: 1;
            }
        }

        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }

            40% {
                transform: translateY(-30px);
            }

            60% {
                transform: translateY(-15px);
            }
        }

        @@keyframes swing {
            20% {
                transform: rotate3d(0, 0, 1, 15deg);
            }

            40% {
                transform: rotate3d(0, 0, 1, -10deg);
            }

            60% {
                transform: rotate3d(0, 0, 1, 5deg);
            }

            80% {
                transform: rotate3d(0, 0, 1, -5deg);
            }

            100% {
                transform: rotate3d(0, 0, 1, 0deg);
            }
        }

        @@keyframes zoomIn {
            from {
                transform: scale(0.5);
                opacity: 0;
            }

            to {
                transform: scale(1);
                opacity: 1;
            }
        }

        @@keyframes flipInX {
            from {
                transform: perspective(400px) rotateX(90deg);
                opacity: 0;
            }

            40% {
                transform: perspective(400px) rotateX(-10deg);
                opacity: 1;
            }

            70% {
                transform: perspective(400px) rotateX(10deg);
            }

            100% {
                transform: perspective(400px) rotateX(0deg);
            }
        }

        @@keyframes flipInY {
            from {
                transform: perspective(400px) rotateY(90deg);
                opacity: 0;
            }

            40% {
                transform: perspective(400px) rotateY(-10deg);
                opacity: 1;
            }

            70% {
                transform: perspective(400px) rotateY(10deg);
            }

            100% {
                transform: perspective(400px) rotateY(0deg);
            }
        }

        @@keyframes rotateIn {
            from {
                transform: rotate(-200deg);
                opacity: 0;
            }

            to {
                transform: rotate(0);
                opacity: 1;
            }
        }
        /* Clases para aplicar las nuevas animaciones */
        .animate-flash {
            animation: flash 2s ease-in-out infinite;
        }

        .animate-bounce {
            animation: bounce 1s ease;
        }

        .animate-swing {
            animation: swing 1.5s ease-in-out;
        }

        .animate-zoom {
            animation: zoomIn 0.5s ease-out;
        }

        .animate-flip-x {
            animation: flipInX 0.7s ease-out;
        }

        .animate-flip-y {
            animation: flipInY 0.7s ease-out;
        }

        .animate-rotate {
            animation: rotateIn 0.7s ease-out;
        }
    </style>
</head>
<body>
    <!-- Preloader -->
    <div id="preloader">
        <div class="spinner"></div>
    </div>

    <!-- Botón Dark Mode Toggle -->
    <button id="darkModeToggle" class="btn-neon">Dark Mode</button>

    <div class="container my-5">
        <h2 class="text-center mb-4">🛒 Productos Disponibles</h2>
        <div class="divider"></div>

        <!-- Filtro de búsqueda en tiempo real -->
        <div class="search-input mb-4">
            <input type="text" id="searchInput" class="form-control" placeholder="Buscar producto en tiempo real...">
        </div>

        <!-- Contenedor de productos -->
        <div class="row" id="productsContainer">
            @if (Model != null && Model.Any())
            {
                foreach (var product in Model)
                {
                    // Calcular precio efectivo si está en oferta
                    var effectivePrice = product.Price * (product.IsOnOffer ? (1 - product.DiscountPercentage / 100m) : 1);
                    // Concatenar clases para condiciones especiales
                    var cardClasses = "";
                    if (product.IsBasicBasket)
                    {
                        cardClasses += "iva-free ";
                    }
                    if (product.IsOnOffer)
                    {
                        cardClasses += "on-offer ";
                    }
                    <div class="col-md-4 mb-4 product-item">
                        <div class="card h-100 shadow-sm @cardClasses.Trim()" @(product.IsOnOffer ? "data-discount='" + product.DiscountPercentage + "%'" : "")>
                            <img src="@product.ImageUrl" class="card-img-top animate-zoom" alt="@product.Name" loading="lazy" />
                            <div class="card-body">
                                <h5 class="card-title animate-flip-x">@product.Name</h5>
                                <p class="card-text">@product.Description</p>
                                <p class="price">💲 @effectivePrice.ToString("C")</p>
                                <p class="stock">📦 Stock: @product.Stock</p>
                                <a asp-controller="Cart" asp-action="Add" asp-route-id="@product.Id" class="btn btn-neon mt-3">
                                    <i class="fa-solid fa-cart-plus"></i> Agregar al Carrito
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p class="text-center">No hay productos disponibles.</p>
                </div>
            }
        </div>

        <!-- Botón para volver al Home -->
        <div class="text-center mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-neon">Volver al Inicio</a>
        </div>
    </div>

    <!-- Bootstrap 5 JS (Bundle) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script para Filtro en Tiempo Real y Animación de Aparición -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const searchInput = document.getElementById('searchInput');
            const productItems = document.querySelectorAll('.product-item');

            // Filtro en tiempo real
            searchInput.addEventListener('keyup', function() {
                const filter = searchInput.value.toLowerCase();
                productItems.forEach(function(item) {
                    const title = item.querySelector('.card-title').textContent.toLowerCase();
                    const description = item.querySelector('.card-text').textContent.toLowerCase();
                    if (title.includes(filter) || description.includes(filter)) {
                        item.style.display = '';
                    } else {
                        item.style.display = 'none';
                    }
                });
            });

            // IntersectionObserver para animar la aparición de cada producto
            const observer = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.animation = 'fadeIn 0.8s forwards ease-out';
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.2 });
            productItems.forEach(item => observer.observe(item));
        });
    </script>

    <!-- GSAP para Preloader y Dark Mode Toggle con Persistencia -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script>
        // Preloader: Escala y desvanecimiento
        window.addEventListener('load', () => {
            gsap.to("#preloader", {
                duration: 0.8,
                opacity: 0,
                scale: 0.9,
                onComplete: () => { document.getElementById("preloader").style.display = "none"; }
            });
        });

        // Dark Mode Toggle con persistencia en localStorage
        const darkModeToggle = document.getElementById("darkModeToggle");
        if(localStorage.getItem("theme") === "dark"){
            document.body.classList.add("dark-mode");
            darkModeToggle.textContent = "Light Mode";
        }
        darkModeToggle.addEventListener("click", () => {
            document.body.classList.toggle("dark-mode");
            if(document.body.classList.contains("dark-mode")){
                darkModeToggle.textContent = "Light Mode";
                localStorage.setItem("theme", "dark");
            } else {
                darkModeToggle.textContent = "Dark Mode";
                localStorage.setItem("theme", "light");
            }
        });
    </script>
</body>
</html>
