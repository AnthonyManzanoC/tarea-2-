@model CoronelExpress.Models.InventoryMovement
@inject CoronelExpress.Data.ApplicationDbContext db

@{
    ViewData["Title"] = "Registrar Movimiento";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<!-- Incluir Bootstrap y FontAwesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    /* Preloader */
    #preloader {
        background: #fff;
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        z-index: 9999;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    @@keyframes spinner {
        0%

    {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }

    }

    .spinner {
        font-size: 3rem;
        color: #007bff;
        animation: spinner 1s linear infinite;
    }

    /* Animaciones de entrada */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@keyframes slideUp {
        from

    {
        transform: translateY(20px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }

    }

    @@keyframes headerPulse {
        0%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.05);
    }

    100% {
        transform: scale(1);
    }

    }

    /* Fondo y tipografía corporativa */
    body {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        padding: 20px;
        margin: 0;
        animation: fadeIn 0.5s ease-in-out;
    }

    .container {
        max-width: 500px;
        margin: auto;
        background: #fff;
        padding: 20px 30px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        animation: slideUp 0.5s ease-in-out;
    }

    h2 {
        font-size: 24px;
        font-weight: bold;
        text-align: center;
        color: #333;
        margin-bottom: 20px;
        animation: headerPulse 2s infinite ease-in-out;
    }

    .form-label {
        font-weight: bold;
        color: #555;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: scale(1.05);
        }

    .stock-info {
        font-size: 14px;
        font-weight: bold;
        color: #28a745;
        margin-top: 5px;
    }

    .error-stock {
        color: #dc3545;
        font-size: 14px;
        font-weight: bold;
    }
</style>

<!-- Preloader -->
<div id="preloader">
    <i class="fas fa-spinner spinner"></i>
</div>

@{
    var product = db.Products.Find(Model.ProductId);
    int stock = product != null ? product.Stock : 0;
    int initialValue = stock > 0 ? 1 : 0;
}

<div class="container" id="mainContent" style="display:none;">
    <h2>
        <i class="fas fa-box-open me-2"></i>Registrar Movimiento de Stock
    </h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

    <form asp-controller="Kardex" asp-action="RegisterMovement" method="post">
        <!-- Campo oculto para el ID del producto -->
        <input type="hidden" asp-for="ProductId" />

        <div class="mb-3">
            <label class="form-label">
                <i class="fas fa-tag me-1"></i>Tipo de Movimiento
            </label>
            <select asp-for="Type" class="form-select">
                <option value="Devolucion">Devolución</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">
                <i class="fas fa-chart-bar me-1"></i>Cantidad (Stock disponible: <strong>@stock</strong>)
            </label>
            @if (stock == 0)
            {
                <input asp-for="Quantity" class="form-control" type="number" min="1" max="@stock" value="@initialValue" required disabled />
                <div class="error-stock">⚠ Sin stock disponible</div>
            }
            else
            {
                <input asp-for="Quantity" class="form-control" type="number" min="1" max="@stock" value="@initialValue" required />
            }
        </div>

        <div class="mb-3">
            <label class="form-label">
                <i class="fas fa-sticky-note me-1"></i>Notas
            </label>
            <textarea asp-for="Notes" class="form-control"></textarea>
        </div>

        @if (stock == 0)
        {
            <button type="submit" class="btn btn-primary w-100" disabled>
                <i class="fas fa-save me-1"></i>Guardar
            </button>
        }
        else
        {
            <button type="submit" class="btn btn-primary w-100">
                <i class="fas fa-save me-1"></i>Guardar
            </button>
        }
        <a class="btn btn-secondary w-100 mt-2" href="@Url.Action("Index", "Kardex")">
            <i class="fas fa-times me-1"></i>Cancelar
        </a>
    </form>
</div>

<script>
    window.addEventListener('load', function() {
        // Ocultar el preloader y mostrar el contenido principal suavemente
        document.getElementById('preloader').style.display = 'none';
        document.getElementById('mainContent').style.display = 'block';
    });
</script>
