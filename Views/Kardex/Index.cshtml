@model List<CoronelExpress.Models.Product>

@{
    ViewData["Title"] = "Control Kardex";
}

<!-- Incluir Bootstrap y FontAwesome en el layout o al inicio de la vista -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    /* Aparecer del contenedor principal con escalado y desplazamiento */
    @@keyframes containerAppear {
        0%

    {
        opacity: 0;
        transform: translateY(50px) scale(0.95);
    }

    100% {
        opacity: 1;
        transform: translateY(0) scale(1);
    }

    }

    /* Aparición de cada fila con efecto de deslizamiento lateral */
    @@keyframes rowFadeIn {
        0%

    {
        opacity: 0;
        transform: translateX(-20px);
    }

    100% {
        opacity: 1;
        transform: translateX(0);
    }

    }

    /* Efecto hover en botones: escalado y sombra */
    @@keyframes btnHover {
        0%

    {
        transform: scale(1);
        box-shadow: none;
    }

    100% {
        transform: scale(1.05);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    }

    /* Pulso suave en el encabezado */
    @@keyframes headerPulse {
        0%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.05);
    }

    100% {
        transform: scale(1);
    }

    }

    /* Aparición gradual en los encabezados de la tabla */
    @@keyframes headerFadeIn {
        0%

    {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }

    }

    /* Animación para iconos en botones: pulso al hover */
    @@keyframes iconPulse {
        0%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.2);
    }

    100% {
        transform: scale(1);
    }

    }

    /* Fondo minimalista corporativo */
    body {
        background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    /* Contenedor animado al cargar la página */
    .animated-container {
        animation: containerAppear 1s cubic-bezier(0.23, 1, 0.32, 1) forwards;
    }

    /* Estilo avanzado para la tabla */
    .table-custom {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
    }

        /* Encabezados de la tabla con efecto fadeIn */
        .table-custom thead th {
            animation: headerFadeIn 1s ease-out forwards;
        }

        /* Animación de aparición para cada fila con retraso incremental */
        .table-custom tbody tr {
            animation: rowFadeIn 0.8s ease-out forwards;
            opacity: 0;
        }

            .table-custom tbody tr:nth-child(1) {
                animation-delay: 0.2s;
            }

            .table-custom tbody tr:nth-child(2) {
                animation-delay: 0.3s;
            }

            .table-custom tbody tr:nth-child(3) {
                animation-delay: 0.4s;
            }

            .table-custom tbody tr:nth-child(4) {
                animation-delay: 0.5s;
            }

            .table-custom tbody tr:nth-child(5) {
                animation-delay: 0.6s;
            }
            /* Agrega más retrasos si el listado es mayor */

            /* Efecto hover para filas: transición de color sin animar propiedades que afecten la legibilidad */
            .table-custom tbody tr:hover {
                background-color: #eef6fd;
                transition: background-color 0.3s ease-in-out;
            }

    /* Efecto en botones: transición y animación al hover */
    .btn {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .btn:hover {
            animation: btnHover 0.2s forwards;
        }

        /* Iconos dentro de botones: efecto de pulso al hover */
        .btn i {
            margin-right: 6px;
            transition: transform 0.2s ease;
        }

        .btn:hover i {
            animation: iconPulse 0.4s ease;
        }

    /* Encabezado principal animado */
    h2 {
        font-weight: 300;
        letter-spacing: 1px;
        margin-bottom: 30px;
        animation: headerPulse 2s infinite ease-in-out;
    }
</style>

<div class="container animated-container my-5">
    <h2 class="text-center text-dark">Control Kardex de Bodega</h2>

    <table class="table table-striped table-bordered table-custom">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Categoría</th>
                <th>Stock Actual</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@(product.Category != null ? product.Category.Name : "Sin categoría")</td>
                    <td>@product.Stock</td>
                    <td>
                        <a class="btn btn-info btn-sm" href="@Url.Action("Details", "Kardex", new { id = product.Id })" title="Ver Movimientos">
                            <i class="fas fa-eye"></i>Ver Movimientos
                        </a>
                        <a class="btn btn-success btn-sm" href="@Url.Action("RegisterMovement", "Kardex", new { id = product.Id })" title="Registrar Movimiento">
                            <i class="fas fa-plus"></i>Registrar Movimiento
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a asp-controller="Productos" asp-action="Index" class="btn btn-outline-dark animated-button">
    🛍️ Ir a Bodega
</a>
</div>
