@model List<CoronelExpress.Models.InventoryMovement>
@{
    ViewData["Title"] = "Historial de Movimientos";
    var product = ViewBag.Product as CoronelExpress.Models.Product;
}

<!-- Incluir Bootstrap y FontAwesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    /* Preloader */
    #preloader {
        background: #ffffff;
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        z-index: 9999;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    /* Spinner animado */
    @@keyframes spinner {
        0%

    {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }

    }

    .spinner {
        font-size: 3rem;
        color: #0d6efd;
        animation: spinner 1s linear infinite;
    }

    /* Aparecer del contenedor principal */
    @@keyframes containerAppear {
        0%

    {
        opacity: 0;
        transform: translateY(50px) scale(0.95);
    }

    100% {
        opacity: 1;
        transform: translateY(0) scale(1);
    }

    }

    /* Aparición de cada fila con efecto de deslizamiento lateral */
    @@keyframes rowFadeIn {
        0%

    {
        opacity: 0;
        transform: translateX(-20px);
    }

    100% {
        opacity: 1;
        transform: translateX(0);
    }

    }

    /* Pulso en el encabezado */
    @@keyframes headerPulse {
        0%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.05);
    }

    100% {
        transform: scale(1);
    }

    }

    /* Aparición gradual en encabezados de la tabla */
    @@keyframes headerFadeIn {
        0%

    {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }

    }

    /* Efecto hover en botones: escalado y sombra */
    @@keyframes btnHover {
        0%

    {
        transform: scale(1);
        box-shadow: none;
    }

    100% {
        transform: scale(1.05);
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    }

    /* Fondo corporativo minimalista */
    body {
        background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    /* Contenedor animado */
    .animated-container {
        animation: containerAppear 1s cubic-bezier(0.23, 1, 0.32, 1) forwards;
    }

    /* Estilo de la tabla */
    .table-custom {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        background-color: #ffffff;
    }

        /* Encabezados de la tabla con efecto fadeIn */
        .table-custom thead th {
            animation: headerFadeIn 1s ease-out forwards;
        }

        /* Animación para cada fila */
        .table-custom tbody tr {
            animation: rowFadeIn 0.8s ease-out forwards;
            opacity: 0;
        }

            .table-custom tbody tr:nth-child(1) {
                animation-delay: 0.2s;
            }

            .table-custom tbody tr:nth-child(2) {
                animation-delay: 0.3s;
            }

            .table-custom tbody tr:nth-child(3) {
                animation-delay: 0.4s;
            }

            .table-custom tbody tr:nth-child(4) {
                animation-delay: 0.5s;
            }

            .table-custom tbody tr:nth-child(5) {
                animation-delay: 0.6s;
            }
            /* Si hay más registros, agregar más retrasos según se requiera */

            /* Hover en filas: solo transición de fondo para mantener legibilidad */
            .table-custom tbody tr:hover {
                background-color: #eef6fd;
                transition: background-color 0.3s ease-in-out;
            }

    /* Botones con efecto hover */
    .btn {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .btn:hover {
            animation: btnHover 0.2s forwards;
        }

    /* Encabezado principal animado */
    h2 {
        font-weight: 300;
        letter-spacing: 1px;
        margin-bottom: 30px;
        animation: headerPulse 2s infinite ease-in-out;
    }
</style>

<!-- Preloader -->
<div id="preloader">
    <i class="fas fa-spinner spinner"></i>
</div>

<div class="container animated-container my-5" style="display:none;" id="mainContent">
    <h2 class="text-center text-dark">
        <i class="fas fa-history me-2"></i>Historial de Movimientos - @product.Name
    </h2>

    <table class="table table-hover table-custom">
        <thead class="table-dark">
            <tr>
                <th><i class="fas fa-calendar-alt me-1"></i>Fecha</th>
                <th><i class="fas fa-exchange-alt me-1"></i>Tipo</th>
                <th><i class="fas fa-sort-numeric-up me-1"></i>Cantidad</th>
                <th><i class="fas fa-sticky-note me-1"></i>Notas</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movement in Model)
            {
                <tr class="@(movement.Type == "Salida" ? "table-danger" : "table-success")">
                    <td>@movement.Date.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@movement.Type</td>
                    <td>@movement.Quantity</td>
                    <td>@movement.Notes</td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-primary" href="@Url.Action("Index", "Kardex")">
        <i class="fas fa-arrow-left me-1"></i>Volver
    </a>
</div>

<!-- Script para el preloader -->
<script>
    window.addEventListener('load', function() {
        // Oculta el preloader y muestra el contenido principal
        document.getElementById('preloader').style.display = 'none';
        document.getElementById('mainContent').style.display = 'block';
    });
</script>
