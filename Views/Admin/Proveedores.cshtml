@model IEnumerable<CoronelExpress.Models.Proveedor>
@{
    ViewData["Title"] = "Administrar Proveedores";
    // Obtener y decodificar el mensaje generado (si existe)
    var mensajeIA = TempData["WhatsappMensajeGenerado"] as string;
    if (!string.IsNullOrEmpty(mensajeIA))
    {
        mensajeIA = System.Net.WebUtility.HtmlDecode(mensajeIA);
    }
    var whatsappProviderId = TempData["whatsappProviderId"] as string;
}

<!-- Incluir Google Fonts, Bootstrap CSS y JS -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-p1Cm1E2A+7kYc24vQp2Y7o3wL+7e4Fj6MxPCYILkWx2Z9hLidHz1rv8jgK8zYUVTuy6/4bYvZD0vB9bSm7GULw=="
      crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap');

    body {
        background-color: #f4f7f9;
        font-family: 'Inter', sans-serif;
        color: #333;
        overflow-x: hidden;
    }
    /* Animación general de entrada para la tarjeta principal */
    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
        animation: cardEntrance 1s ease forwards;
    }

    @@keyframes cardEntrance {
        0%

    {
        opacity: 0;
        transform: translateY(50px) scale(0.95);
    }

    100% {
        opacity: 1;
        transform: translateY(0) scale(1);
    }

    }
    /* Cabecera con efecto pulsante y cambio de escala */
    .card-header {
        background: linear-gradient(90deg, #00b09b, #96c93d);
        color: white;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
        font-size: 1.3rem;
        text-align: center;
        padding: 20px;
        animation: headerPulse 2s infinite;
    }

    @@keyframes headerPulse {
        0%, 100%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.05);
    }

    }
    /* Animación en la cabecera de la tabla */
    .table thead th {
        border-bottom: none;
        color: #333;
        opacity: 0;
        animation: headerSlide 0.8s forwards;
    }

    @@keyframes headerSlide {
        0%

    {
        opacity: 0;
        transform: translateY(-20px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .table thead th i {
        margin-right: 5px;
        display: inline-block;
        animation: iconBounce 2s infinite;
    }

    @@keyframes iconBounce {
        0%, 100%

    {
        transform: translateY(0) rotate(0deg);
    }

    50% {
        transform: translateY(-5px) rotate(180deg);
    }

    }
    /* Animación para las filas de la tabla */
    .table tbody tr {
        transition: background-color 0.2s, transform 0.3s;
        opacity: 0;
        animation: rowFadeIn 0.5s forwards;
    }

    @@keyframes rowFadeIn {
        0%

    {
        opacity: 0;
        transform: translateY(20px) scale(0.98);
    }

    100% {
        opacity: 1;
        transform: translateY(0) scale(1);
    }

    }

    .table tbody tr:hover {
        background-color: #e9f7ef;
        transform: scale(1.01);
    }
    /* Botones y acciones con efectos de rotación y escalado */
    .action-buttons button,
    .action-buttons a {
        margin-right: 5px;
        transition: transform 0.3s ease, opacity 0.3s ease;
        border-radius: 5px;
    }

        .action-buttons button:hover,
        .action-buttons a:hover {
            transform: scale(1.1) rotate(3deg);
            opacity: 0.9;
        }

    .btn-custom {
        border-radius: 5px;
        transition: background-color 0.3s ease, transform 0.3s;
    }

        .btn-custom:hover {
            opacity: 0.9;
        }
        /* Keyframes para iconos giratorios en botones */
        .btn-custom i {
            display: inline-block;
            animation: rotateIcon 2s linear infinite;
        }

    @@keyframes rotateIcon {
        0%

    {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }

    }
    /* Botón para regresar al Dashboard */
    .btn-back {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 1000;
        background: linear-gradient(90deg, #ff416c, #ff4b2b);
        color: #fff;
        border: none;
        border-radius: 50px;
        padding: 12px 20px;
        font-size: 1rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease, opacity 0.3s ease;
    }

        .btn-back:hover {
            transform: scale(1.1) rotate(-3deg);
            opacity: 0.9;
        }
</style>

<div class="container mt-5">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="card">
        <div class="card-header">
            Administrar Proveedores
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead class="bg-light">
                        <tr>
                            <th><i class="fa-solid fa-user"></i> Nombre</th>
                            <th><i class="fa-solid fa-info-circle"></i> Descripción</th>
                            <th><i class="fa-solid fa-rocket"></i> Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="animation-delay:@(Model.ToList().IndexOf(item) * 0.1)s">
                                <td>@item.Nombre</td>
                                <td>@item.Descripcion</td>
                                <td class="action-buttons">
                                    <button type="button" class="btn btn-primary btn-sm btn-custom" data-bs-toggle="modal" data-bs-target="#emailModal" data-id="@item.Id">
                                        <i class="fa-solid fa-envelope"></i> Enviar Email por SMTP
                                    </button>
                                    <button type="button" class="btn btn-info btn-sm btn-custom" data-bs-toggle="modal" data-bs-target="#whatsappModal" data-id="@item.Id">
                                        <i class="fa-solid fa-phone"></i> Enviar Mensaje al Número
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- Formulario para generar mensaje automático -->
            <form method="post" asp-action="GenerarMensaje" class="mt-3">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-secondary btn-custom">
                    <i class="fa-solid fa-magic"></i> Generar Mensaje Automático
                </button>
            </form>
        </div>
    </div>
</div>

<!-- Botón para regresar al Dashboard -->
<div class="d-flex justify-content-end">
    <a asp-controller="Admin" asp-action="Dashboard" class="btn-back">
        <i class="fa-solid fa-house"></i> Volver al Dashboard
    </a>
</div>

<!-- Modal para Enviar Email por SMTP -->
<div class="modal fade" id="emailModal" tabindex="-1" aria-labelledby="emailModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="emailModalLabel">Enviar Email por SMTP</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="EnviarEmail">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="emailProviderId" name="providerId" value="" />
                    <div class="mb-3">
                        <label for="recipientEmail" class="form-label">Email Destinatario</label>
                        <input type="email" class="form-control" id="recipientEmail" name="recipientEmail" placeholder="correo@ejemplo.com" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mensaje Predeterminado</label>
                        <select class="form-select" id="emailPreset" name="emailPreset">
                            <option value="Si pronto me contacte, te enviaré más información.">Si pronto me contacte, te enviaré más información.</option>
                            <option value="Me gustó tu oferta, pronto me contactaré por WhatsApp a tu número.">Me gustó tu oferta, pronto me contactaré por WhatsApp a tu número.</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="emailAdditional" class="form-label">Mensaje Adicional (Opcional)</label>
                        <textarea class="form-control" id="emailAdditional" name="emailAdditional" rows="3" placeholder="Agrega información adicional si es necesario"></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-custom" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary btn-custom"><i class="fa-solid fa-paper-plane"></i> Enviar Email</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Enviar Mensaje vía WhatsApp -->
<div class="modal fade" id="whatsappModal" tabindex="-1" aria-labelledby="whatsappModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="whatsappModalLabel">Enviar Mensaje al Número</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form method="post" id="whatsappForm" asp-action="EnviarWhatsApp">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="whatsappProviderId" name="providerId" value="" />
                    <div class="mb-3">
                        <label for="recipientPhone" class="form-label">Número de Teléfono</label>
                        <input type="text" class="form-control" id="recipientPhone" name="recipientPhone" placeholder="+1234567890" required />
                    </div>
                    <div class="mb-3">
                        <label for="generatedMessage" class="form-label">Mensaje Generado</label>
                        <textarea class="form-control" id="generatedMessage" name="generatedMessage" rows="3" placeholder="Mensaje generado por IA"></textarea>
                        <small class="form-text text-muted">Presiona <strong>Generar Mensaje con IA</strong> para cargar un mensaje automático.</small>
                    </div>
                    <div class="mb-3">
                        <label for="whatsappAdditional" class="form-label">Mensaje Adicional (Opcional)</label>
                        <textarea class="form-control" id="whatsappAdditional" name="whatsappAdditional" rows="2" placeholder="Agrega información adicional si es necesario"></textarea>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <button type="submit" class="btn btn-warning btn-custom" formaction="/Admin/GenerarMensajeParaWhatsApp">
                            <i class="fa-solid fa-robot"></i> Generar Mensaje con IA
                        </button>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-custom" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-info btn-custom"><i class="fa-solid fa-paper-plane"></i> Enviar Mensaje</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Asignar el providerId a los campos ocultos al abrir cada modal
    document.addEventListener("DOMContentLoaded", function () {
        var emailModalEl = document.getElementById("emailModal");
        emailModalEl.addEventListener("show.bs.modal", function (event) {
            var button = event.relatedTarget;
            var providerId = button.getAttribute("data-id");
            document.getElementById("emailProviderId").value = providerId;
        });
        var whatsappModalEl = document.getElementById("whatsappModal");
        whatsappModalEl.addEventListener("show.bs.modal", function (event) {
            var button = event.relatedTarget;
            var providerId = button.getAttribute("data-id");
            document.getElementById("whatsappProviderId").value = providerId;
        });
    });

    // Si se generó un mensaje para WhatsApp, abrir el modal automáticamente y asignar el mensaje
    @if (!string.IsNullOrEmpty(mensajeIA))
    {
        <text>
                document.addEventListener("DOMContentLoaded", function() {
                    document.getElementById("generatedMessage").value = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(mensajeIA));
                    document.getElementById("whatsappProviderId").value = '@whatsappProviderId';
                    var whatsappModal = new bootstrap.Modal(document.getElementById("whatsappModal"));
                    whatsappModal.show();
                });
        </text>
    }
</script>
