@model IEnumerable<CoronelExpress.Models.TermsAcceptanceViewModel>
@{
    ViewData["Title"] = "Administrar Aceptación de Términos";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" integrity="sha512-9ndCyUaH7+4hbja7Fjg2WJpnqlN33i6Ne/HxqCfaK4gUyWAGZlYkl7/vE8lf+h3nD5p+STY/1IWUJhl8sklDQA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-p1Cm1E2A+7kYc24vQp2Y7o3wL+7e4Fj6MxPCYILkWx2Z9hLidHz1rv8jgK8zYUVTuy6/4bYvZD0vB9bSm7GULw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

    body {
        background: #f4f7f9; /* Fondo más claro */
        color: #121212;
        font-family: 'Poppins', sans-serif;
        overflow-x: hidden;
    }

    .container {
        max-width: 960px;
    }

    h2 {
        font-weight: 600;
        letter-spacing: 1px;
        animation: pulseIn 1.5s ease forwards;
    }

    /* Efecto de pulsación en el título */
    @@keyframes pulseIn {
        0%

    {
        opacity: 0;
        transform: scale(0.8);
    }

    100% {
        opacity: 1;
        transform: scale(1);
    }

    }

    .section-title {
        text-align: center;
        margin-bottom: 40px;
    }

    /* Estilos de la tabla */
    .table thead th {
        border-bottom: 2px solid #121212;
        color: #121212;
        opacity: 0;
        animation: slideDown 0.8s forwards;
    }

        .table thead th i {
            margin-right: 5px;
            display: inline-block;
            animation: iconBounce 2s infinite;
        }

    @@keyframes iconBounce {
        0%, 100%

    {
        transform: translateY(0) rotate(0deg);
    }

    50% {
        transform: translateY(-5px) rotate(180deg);
    }

    }

    .table tbody td {
        border-top: 1px solid rgba(18, 18, 18, 0.1);
        color: #121212;
    }

    /* Animación para encabezado de tabla */
    @@keyframes slideDown {
        0%

    {
        opacity: 0;
        transform: translateY(-20px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Animación de entrada para cada fila con delay progresivo */
    .table tbody tr {
        opacity: 0;
        animation: fadeInSlideUp 0.5s forwards;
    }

    @@keyframes fadeInSlideUp {
        0%

    {
        opacity: 0;
        transform: translateY(20px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Botón avanzado con animaciones, iconos en rotación y efectos de hover */
    .btn-custom {
        background-color: transparent;
        border: 1px solid #121212;
        color: #121212;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 10px 20px;
        border-radius: 50px;
        font-weight: 500;
    }

        .btn-custom:hover {
            background-color: #121212;
            color: #f4f7f9;
            transform: scale(1.1) rotate(3deg);
        }

        /* Animación de rotación para iconos dentro del botón */
        .btn-custom i {
            display: inline-block;
            animation: rotateIcon 2s linear infinite;
        }

    @@keyframes rotateIcon {
        0%

    {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }

    }

    /* Input de búsqueda con animación de enfoque */
    .form-control {
        background-color: #ffffff;
        border: 1px solid #ccc;
        color: #121212;
        border-radius: 30px;
        padding-left: 20px;
        transition: box-shadow 0.3s, transform 0.3s;
    }

        .form-control:focus {
            box-shadow: 0 0 15px rgba(18, 18, 18, 0.3);
            transform: scale(1.02);
        }

    /* Hover en filas de la tabla */
    .table tbody tr:hover {
        background-color: rgba(18, 18, 18, 0.05);
        transition: background-color 0.3s;
    }
</style>

<div class="container py-5">
    <div class="section-title">
        <h2>Administrar Aceptación de Términos</h2>
    </div>

    <!-- Buscador -->
    <div class="row mb-4">
        <div class="col-md-6 offset-md-3">
            <input type="text" id="searchInput" class="form-control" placeholder="Buscar por Nombre o Email" />
        </div>
    </div>

    <!-- Tabla de Datos -->
    <div class="table-responsive">
        <table class="table table-borderless">
            <thead>
                <tr>
                    <th><i class="fa-solid fa-user"></i> Nombre</th>
                    <th><i class="fa-solid fa-envelope"></i> Email</th>
                    <th><i class="fa-solid fa-phone"></i> Teléfono</th>
                    <th><i class="fa-solid fa-check"></i> Aceptó Términos</th>
                    <th><i class="fa-solid fa-trash"></i> Eliminar</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                @for (int i = 0; i < Model.Count(); i++)
                {
                    var item = Model.ElementAt(i);
                    <tr style="animation-delay:@(i * 0.1)s">
                        <td>@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>@(item.AcceptTerms ? "Sí" : "No")</td>
                        <td>
                            <form asp-controller="Admin" asp-action="DeleteTermsAcceptance" method="post" onsubmit="return confirm('¿Está seguro de eliminar este registro?');">
                                <input type="hidden" name="email" value="@item.Email" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fa-solid fa-trash"></i> Eliminar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- Botón para volver al Dashboard -->
    <div class="text-center mt-5">
        <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-custom">
            <i class="fa-solid fa-house"></i> Volver al Dashboard
        </a>
    </div>
</div>

@section Scripts {
    <script>
        // Buscador en tiempo real
        document.getElementById('searchInput').addEventListener('keyup', function () {
            var filter = this.value.toLowerCase();
            var rows = document.querySelectorAll('#tableBody tr');
            rows.forEach(function (row) {
                var nombre = row.cells[0].textContent.toLowerCase();
                var email = row.cells[1].textContent.toLowerCase();
                row.style.display = (nombre.indexOf(filter) > -1 || email.indexOf(filter) > -1) ? '' : 'none';
            });
        });
    </script>
}
