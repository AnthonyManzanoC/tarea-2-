@model IEnumerable<CoronelExpress.Models.Order>
@{
    ViewData["Title"] = "Dashboard de Administración";
    // Totales según el status de los pedidos.
    var pendingOrders = Model.Where(o => o.Status == "Pendiente").Count();
    var inProcessOrders = Model.Where(o => o.Status == "En Proceso").Count();
    var completeOrders = Model.Where(o => o.Status == "Completo").Count();
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap y Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        /* Variables y Temas */
        :root {
            /* Colores patrióticos */
            --primary-color: #ffcc00; /* Amarillo vibrante */
            --secondary-color: #003399; /* Azul intenso */
            --tertiary-color: #cc0000; /* Rojo profundo */
            /* Texto y acentos */
            --text-color: #B0B0B0; /* Oscuro para contraste */
            --accent-color: var(--primary-color);
            /* Fondo con patrón patriótico */
            --background-pattern: repeating-linear-gradient( 45deg, var(--primary-color) 0%, var(--primary-color) 20%, var(--secondary-color) 20%, var(--secondary-color) 40%, var(--tertiary-color) 40%, var(--tertiary-color) 60% );
            /* Sombras y brillos */
            --overlay-color: rgba(255, 255, 255, 0.1);
            --glow-color: rgba(255, 204, 0, 0.5);
        }

        /* Estilos Light / Dark (sin afectar su funcionamiento) */
        body {
            background: linear-gradient(135deg, #f9f9f9, #e9ecef);
            color: var(--text-color);
            font-family: 'Poppins', sans-serif;
            overflow-x: hidden;
            transition: background 0.5s ease, color 0.5s ease;
        }

            body.dark-mode {
                background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
                color: white;
            }
        /* Preloader Avanzado con spin y pulse */
        #preloader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: var(--primary-color);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 3000;
        }

        .spinner {
            width: 80px;
            height: 80px;
            border: 10px solid rgba(255,255,255,0.3);
            border-top: 10px solid #fff;
            border-radius: 50%;
            animation: spin 1s linear infinite, pulse 1.5s ease-in-out infinite;
        }

        @@keyframes spin {
            0%

        {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }

        }

        @@keyframes pulse {
            0%, 100%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.2);
        }

        }
        /* Botón Dark Mode Toggle */
        #darkModeToggle {
            position: fixed;
            top: 130px;
            right: 20px;
            z-index: 1500;
            padding: 10px 20px;
            border-radius: 50px;
            font-weight: bold;
            background: var(--accent-color);
            color: #fff;
            border: none;
            cursor: pointer;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }

            #darkModeToggle:hover {
                transform: scale(1.05);
            }
        /* Dashboard Container con animación slideIn */
        .dashboard-container {
            padding: 40px;
            backdrop-filter: blur(15px);
            border-radius: 20px;
            background: rgba(255, 255, 255, 0.1);
            box-shadow: 0 15px 40px rgba(0,0,0,0.5);
            text-align: center;
            position: relative;
            transition: transform 0.3s ease-in-out;
            margin-bottom: 30px;
            animation: slideIn 1s ease-out;
        }

        @@keyframes slideIn {
            from

        {
            transform: translateY(20px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }

        }

        .dashboard-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 50px rgba(0,0,0,0.7);
        }
        /* Íconos Flotantes con animación avanzada y keyframes extra (wiggle, flip, zoomIn) */
        .floating-icon {
            position: absolute;
            font-size: 70px;
            opacity: 0.2;
            animation: floatIcon 10s infinite alternate;
        }

        .icon-1 {
            top: 10px;
            left: 10px;
            animation: floatIcon 10s infinite alternate, wiggle 2s infinite;
        }

        .icon-2 {
            top: 50px;
            right: 30px;
            animation: floatIcon 10s infinite alternate, flip 3s infinite;
        }

        .icon-3 {
            bottom: 30px;
            left: 50px;
            animation: floatIcon 10s infinite alternate, zoomIn 1s infinite;
        }

        @@keyframes floatIcon {
            0%

        {
            transform: translateY(0) rotate(0deg);
        }

        50% {
            transform: translateY(15px) rotate(10deg);
        }

        100% {
            transform: translateY(0) rotate(20deg);
        }

        }

        @@keyframes wiggle {
            0%, 100%

        {
            transform: rotate(-3deg);
        }

        50% {
            transform: rotate(3deg);
        }

        }

        @@keyframes flip {
            0%

        {
            transform: perspective(400px) rotateY(0deg);
        }

        50% {
            transform: perspective(400px) rotateY(180deg);
        }

        100% {
            transform: perspective(400px) rotateY(360deg);
        }

        }

        @@keyframes zoomIn {
            0%

        {
            transform: scale(0.8);
            opacity: 0;
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }

        }
        /* Botones Animados con efecto ripple y animaciones 3D */
        .btn-animated {
            position: relative;
            overflow: hidden;
            border-radius: 12px;
            transition: transform 0.3s ease-in-out, box-shadow 0.3s;
        }

            .btn-animated::after {
                content: "";
                position: absolute;
                top: 50%;
                left: 50%;
                width: 0;
                height: 0;
                background: rgba(255,255,255,0.3);
                border-radius: 50%;
                transform: translate(-50%, -50%);
                transition: width 0.5s ease, height 0.5s ease;
            }

            .btn-animated:hover::after {
                width: 200%;
                height: 200%;
            }

            .btn-animated:hover {
                transform: scale(1.1);
                box-shadow: 0 0 25px rgba(0,229,255,0.9);
            }

        .btn-3d-icon i {
            color: white;
            transition: transform 0.3s ease, color 0.3s ease;
            transform-style: preserve-3d;
        }

        .btn-3d-icon:hover i {
            animation: floatIconButton 1.5s infinite ease-in-out;
            color: #00e5ff;
        }

        @@keyframes floatIconButton {
            0%

        {
            transform: translateY(0) rotateX(0deg) rotateY(0deg);
        }

        50% {
            transform: translateY(-5px) rotateX(15deg) rotateY(15deg);
        }

        100% {
            transform: translateY(0) rotateX(0deg) rotateY(0deg);
        }

        }
        /* Keyframes Adicionales: Ripple (para microinteracción) */
        @@keyframes ripple {
            0%

        {
            transform: scale(0);
            opacity: 1;
        }

        100% {
            transform: scale(2);
            opacity: 0;
        }

        }
        /* Barra de Búsqueda */
        .search-bar {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 20px;
            gap: 10px;
        }
        /* Tarjetas de Estado (Semáforo) con efecto popIn */
        .status-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            animation: popIn 1s ease-in-out;
        }

        @@keyframes popIn {
            0%

        {
            transform: scale(0.8);
            opacity: 0;
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }

        }

        .status-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.3);
        }

        .status-icon {
            font-size: 30px;
            animation: rotateIcon 3s infinite linear, floatIcon 3s infinite alternate;
        }

        @@keyframes rotateIcon {
            0%

        {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }

        }
        /* Estilos para Tablas con animación fadeIn */
        .table {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            overflow: hidden;
            backdrop-filter: blur(10px);
            animation: fadeIn 1s ease;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }

        .table-hover tbody tr:hover {
            background-color: rgba(255,255,255,0.25);
        }
        /* Botón "Volver Arriba" */
        #backToTop {
            position: fixed;
            bottom: 30px;
            right: 30px;
            background: var(--accent-color);
            color: #fff;
            border: none;
            padding: 10px 15px;
            border-radius: 50%;
            display: none;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 0 10px rgba(0,0,0,0.3);
            transition: opacity 0.3s;
            z-index: 1200;
        }
    </style>
</head>
<body>
    <!-- Preloader Avanzado -->
    <div id="preloader">
        <div class="spinner"></div>
    </div>

    <!-- Botón Dark Mode Toggle -->
    <button id="darkModeToggle" class="btn btn-neon">Dark Mode</button>

    @* Dashboard de Administración - Versión Ultra Avanzada *@
    <div class="container mt-5 dashboard-container">

        @* Mensajes de Error *@
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger animated fadeInUp">
                @TempData["Error"]
            </div>
        }

        @* Encabezado con Íconos Flotantes (centrado) *@
        <header class="dashboard-header mb-4 text-center">
            <div class="floating-icons mb-3">
                <i class="fas fa-chart-line floating-icon icon-1"></i>
                <i class="fas fa-cogs floating-icon icon-2"></i>
                <i class="fas fa-boxes floating-icon icon-3"></i>
            </div>
            <h2>Dashboard de Administración</h2>
            <p>A continuación se muestran todos los pedidos realizados:</p>
        </header>

        @* Acciones y Buscador *@
        <section class="dashboard-actions mb-4">
            <div class="row align-items-center">
                <div class="col-md-3 mb-2">
                    <a asp-controller="Broadcast" asp-action="Compose" class="btn btn-warning btn-animated w-100">
                        <i class="fas fa-envelope"></i> Enviar Promoción
                    </a>
                </div>
                <div class="col-md-6 mb-2">
                    <form asp-action="SearchOrders" method="get" class="d-flex justify-content-center">
                        <input type="text" name="search" placeholder="Buscar pedido..." class="form-control me-2" style="max-width:300px;">
                        <button type="submit" class="btn btn-primary btn-animated">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                    </form>
                </div>
                <div class="col-md-3 mb-2">
                    <a asp-controller="Admin" asp-action="ManageUserRoles" class="btn btn-danger btn-animated btn-3d-icon w-100">
                        <i class="fas fa-users-cog"></i> Gestionar Accesos
                    </a>
                </div>
            </div>
        </section>

        @* Herramientas para Administradores centradas *@
        <section class="dashboard-admin-tools mb-4">
            <h4 class="text-center">Administradores</h4>
            <div class="d-flex justify-content-center gap-3 flex-wrap">
                <a href="@Url.Action("Contacto", "Admin")" class="btn btn-warning btn-lg">
                    <i class="fas fa-address-book"></i> Panel Contactos
                </a>
                <a href="@Url.Action("QuejasSugerencias", "Admin")" class="btn btn-success btn-lg">
                    <i class="fas fa-comment-dots"></i> Panel Quejas y Sugerencias
                </a>
            </div>
        </section>

        @* Listado de Pedidos *@
        <section class="dashboard-orders mb-5">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <p>No se han registrado pedidos aún.</p>
                </div>
            }
            else
            {
                <table class="table table-dark table-hover">
                    <thead class="table-light text-dark">
                        <tr>
                            <th>Número de Orden</th>
                            <th>Fecha</th>
                            <th>Cliente</th>
                            <th>Método de Pago</th>
                            <th>Detalle del Pedido</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.OrderNumber</td>
                                <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@order.Customer.FullName</td>
                                <td>@order.PaymentMethod.Method</td>
                                <td>
                                    <ul class="list-unstyled">
                                        @foreach (var detail in order.OrderDetails)
                                        {
                                            <li>@detail.Product.Name - Cantidad: @detail.Quantity - Precio: @detail.UnitPrice.ToString("C")</li>
                                        }
                                    </ul>
                                </td>
                                <td>@order.TotalAmount.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </section>

        @* Reportes y Estadísticas *@
        <section class="dashboard-reports mb-5">
            <h2 class="mb-4 text-center">Reportes y Estadísticas</h2>
            <p class="text-center">Visualiza reportes, estadísticas y herramientas administrativas.</p>
            <div class="row justify-content-center">
                <div class="col-md-4">

                    <div class="card text-center text-white bg-primary mb-3">
                        <div class="card-header">Total de Productos</div>
                        <div class="card-body">
                            <h3>@ViewData["TotalProductos"]</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center text-white bg-success mb-3">
                        <div class="card-header">Ventas Totales</div>
                        <div class="card-body">
                            <h3>@ViewData["VentasTotales"]</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center text-white bg-warning mb-3">
                        <div class="card-header">Total de Categorías</div>
                        <div class="card-body">
                            <h3>@ViewData["TotalCategorias"]</h3>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("ReportesInteligentes", "Reports")"
                         class="btn btn-outline-info"
                         style="border-radius: 30px; padding: 10px 20px; font-weight: bold;">
                    <i class="fas fa-brain"></i> Ver Reportes Inteligentes
                </a>

            </div>
        </section>

        @* Estado de Órdenes (Semáforo) *@
        <section class="dashboard-status mb-5">
            <h2 class="mb-4 text-center">Estado de Órdenes</h2>
            <div class="row justify-content-center">
                <div class="col-md-4 mb-3">
                    <a asp-action="OrdersByStatus" asp-route-status="Pendiente" class="text-white text-decoration-none">
                        <div class="card status-card text-center text-white bg-warning">
                            <div class="card-header">Órdenes Pendientes</div>
                            <div class="card-body">
                                <h3>@pendingOrders</h3>
                                <i class="fas fa-hourglass-half status-icon"></i>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-4 mb-3">
                    <a asp-action="OrdersByStatus" asp-route-status="En Proceso" class="text-white text-decoration-none">
                        <div class="card status-card text-center text-white bg-info">
                            <div class="card-header">Órdenes en Proceso</div>
                            <div class="card-body">
                                <h3>@inProcessOrders</h3>
                                <i class="fas fa-sync-alt status-icon"></i>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-4 mb-3">
                    <a asp-action="OrdersByStatus" asp-route-status="Completo" class="text-white text-decoration-none">
                        <div class="card status-card text-center text-white bg-success">
                            <div class="card-header">Órdenes Completas</div>
                            <div class="card-body">
                                <h3>@completeOrders</h3>
                                <i class="fas fa-check status-icon"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </section>

        @* Nuevas Funcionalidades Administrativas *@
        <section class="dashboard-features mb-5">
            <h2 class="mb-4 text-center">Nuevas Funcionalidades Administrativas</h2>
            <div class="row justify-content-center">
                <div class="col-md-3 mb-2">
                    <a asp-controller="Admin" asp-action="ManagePromotions" class="btn btn-outline-primary btn-animated w-100">
                        <i class="fas fa-gift"></i> Promociones
                    </a>
                </div>
                <div class="col-md-3 mb-2">
                    <a asp-controller="Admin" asp-action="ManageProveedores" class="btn btn-outline-primary btn-animated w-100">
                        <i class="fas fa-truck"></i> Proveedores
                    </a>
                </div>
                <div class="col-md-3 mb-2">
                    <a asp-controller="Admin" asp-action="ManageTermsAcceptance" class="btn btn-outline-primary btn-animated w-100">
                        <i class="fas fa-file-signature"></i> Aceptación de Términos
                    </a>
                </div>
                <div class="col-md-3 mb-2">
                    <a asp-controller="Admin" asp-action="ManageTrabajaConNosotros" class="btn btn-outline-primary btn-animated w-100">
                        <i class="fas fa-briefcase"></i> Trabaja con Nosotros
                    </a>
                </div>
            </div>
        </section>
    </div>

    @* Enlaces rápidos adicionales – Sección Ultra Moderna *@
    <div class="container mt-4">
        <section class="quick-links text-center">
            <h3>Conéctate al Mundo</h3>
            <div class="row justify-content-center">
                <div class="col-md-3 mb-2">
                    <a asp-controller="WhatsApp" asp-action="Compose" class="btn btn-success btn-3d-icon btn-animated w-100">
                        <i class="fab fa-whatsapp"></i> WhatsApp
                    </a>
                </div>
                <div class="col-md-3 mb-2">
                    <a asp-controller="SocialMedia" asp-action="Compose" class="btn btn-info btn-3d-icon btn-animated w-100">
                        <i class="fas fa-share-alt"></i> Redes Sociales
                    </a>
                </div>
                <div class="col-md-3 mb-2">
                    <a asp-controller="TikTok" asp-action="Open" class="btn btn-dark btn-3d-icon btn-animated w-100">
                        <i class="fab fa-tiktok"></i> TikTok
                    </a>
                </div>
            </div>
        </section>
    </div>

    @* Botón "Volver Arriba" *@
    <button id="backToTop" class="btn btn-secondary">
        <i class="fas fa-arrow-up"></i>
    </button>


    <!-- Scripts: Bootstrap y GSAP -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script>
        // Preloader: desvanecimiento y escalado
        window.addEventListener('load', () => {
            gsap.to("#preloader", { duration: 0.8, opacity: 0, scale: 0.9, onComplete: () => {
                document.getElementById("preloader").style.display = "none";
            }});
        });
        // Dark Mode Toggle con persistencia
        const darkModeToggle = document.getElementById("darkModeToggle");
        if(localStorage.getItem("theme") === "dark"){
            document.body.classList.add("dark-mode");
            darkModeToggle.textContent = "Light Mode";
        }
        darkModeToggle.addEventListener("click", () => {
            document.body.classList.toggle("dark-mode");
            if(document.body.classList.contains("dark-mode")){
                darkModeToggle.textContent = "Light Mode";
                localStorage.setItem("theme", "dark");
            } else {
                darkModeToggle.textContent = "Dark Mode";
                localStorage.setItem("theme", "light");
            }
        });
        // Animación de tarjetas al aparecer con IntersectionObserver y GSAP
        const cardObserver = new IntersectionObserver(entries => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    gsap.fromTo(entry.target, { opacity: 0, scale: 0.9 }, { opacity: 1, scale: 1, duration: 0.6, ease: "power1.out" });
                    cardObserver.unobserve(entry.target);
                }
            });
        }, { threshold: 0.2 });
        document.querySelectorAll('.card').forEach(card => cardObserver.observe(card));
        // Botón "Volver Arriba"
        const backToTop = document.getElementById('backToTop');
        window.addEventListener('scroll', () => {
            backToTop.style.display = window.scrollY > 400 ? "flex" : "none";
        });
        backToTop.addEventListener('click', () => {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });
    </script>
</body>
</html>
