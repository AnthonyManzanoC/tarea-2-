@model CoronelExpress.Models.Order
@using System.Globalization
@{
    ViewData["Title"] = "Factura Electrónica - Pedido";
    // Cálculos para el desglose aplicando descuentos (si existen)
    decimal subtotal = 0;
    decimal totalIva = 0;
    foreach (var item in Model.OrderDetails)
    {
        decimal originalPrice = (item.Product != null) ? item.Product.Price : item.UnitPrice;
        decimal discountPercentage = (item.Product != null && item.Product.IsOnOffer) ? item.Product.DiscountPercentage : 0;
        decimal effectivePrice = (discountPercentage > 0) ? originalPrice * (1 - discountPercentage / 100m) : originalPrice;
        decimal lineSubTotal = effectivePrice * item.Quantity;
        subtotal += lineSubTotal;
        if (item.Product != null && !item.Product.IsBasicBasket)
        {
            totalIva += lineSubTotal * 0.15m;
        }
    }
    decimal finalTotal = subtotal + totalIva;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!-- Fuentes e Iconos -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        /* Fondo animado sutil */
        body {
            font-family: 'Montserrat', sans-serif;
            background: linear-gradient(135deg, #f8f9fa, #ffffff);
            margin: 0;
            padding: 0;
            color: #333;
            animation: bgAnimate 10s ease-in-out infinite;
        }
        /* ================= PRELOADER AVANZADO ================= */
        #preloader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: #fff;
            z-index: 9999;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            transition: opacity 0.5s ease, visibility 0.5s;
        }

            #preloader.hidden {
                opacity: 0;
                visibility: hidden;
            }

        .loader {
            border: 6px solid #f3f3f3;
            border-top: 6px solid var(--primary-color);
            border-radius: 50%;
            width: 60px;
            height: 60px;
            animation: spin 1s linear infinite;
            margin-bottom: 15px;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        .loader-text {
            font-family: var(--font-main);
            font-size: 1rem;
            color: var(--primary-color);
        }
        @@keyframes bgAnimate {
            0%

        {
            background: linear-gradient(135deg, #f8f9fa, #ffffff);
        }

        50% {
            background: linear-gradient(135deg, #ffffff, #f8f9fa);
        }

        100% {
            background: linear-gradient(135deg, #f8f9fa, #ffffff);
        }

        }

        /* Contenedor principal 3D con flotación y perspectiva */
        .invoice-container {
            max-width: 1000px;
            margin: 50px auto;
            padding: 50px;
            background: #ffffff;
            border-radius: 16px;
            border: 1px solid #e0e0e0;
            box-shadow: 0 0 40px rgba(26,115,232,0.15);
            animation: fadeIn 1s ease-in-out, float 6s ease-in-out infinite;
            transform: perspective(1200px) rotateX(5deg);
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(-20px) rotateX(10deg);
        }

        to {
            opacity: 1;
            transform: translateY(0) rotateX(0);
        }

        }

        @@keyframes float {
            0%, 100%

        {
            transform: translateY(0) rotateX(5deg);
        }

        50% {
            transform: translateY(-10px) rotateX(5deg);
        }

        }

        /* Cabecera: animación deslizante, wobble y efecto neon */
        .invoice-header {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-bottom: 25px;
            border-bottom: 3px solid #1A73E8;
            margin-bottom: 30px;
            animation: slideIn 1.5s ease-out, wobble 3s ease-in-out infinite;
        }

        @@keyframes slideIn {
            from

        {
            opacity: 0;
            transform: translateX(-100px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }

        }

        @@keyframes wobble {
            0%

        {
            transform: translateX(0);
        }

        15% {
            transform: translateX(-25px) rotate(-5deg);
        }

        30% {
            transform: translateX(20px) rotate(3deg);
        }

        45% {
            transform: translateX(-15px) rotate(-3deg);
        }

        60% {
            transform: translateX(10px) rotate(2deg);
        }

        75% {
            transform: translateX(-5px) rotate(-1deg);
        }

        100% {
            transform: translateX(0);
        }

        }

        .invoice-title {
            font-size: 3.5rem;
            font-weight: 700;
            text-transform: uppercase;
            background: linear-gradient(90deg, #1A73E8, #0D47A1);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            transition: transform 0.3s ease;
            animation: neonPulse 2s infinite, intelligentRotation 4s ease-in-out infinite;
        }

        @@keyframes neonPulse {
            0%, 100%

        {
            text-shadow: 0 0 10px rgba(26,115,232,0.7), 0 0 20px rgba(26,115,232,0.5), 0 0 30px rgba(13,71,161,0.3);
        }

        50% {
            text-shadow: 0 0 20px rgba(26,115,232,1), 0 0 30px rgba(26,115,232,0.8), 0 0 40px rgba(13,71,161,0.5);
        }

        }

        @@keyframes intelligentRotation {
            0%

        {
            opacity: 0;
            transform: rotateY(-360deg) scale(0.8);
        }

        50% {
            opacity: 0.8;
            transform: rotateY(180deg) scale(1.05);
        }

        100% {
            opacity: 1;
            transform: rotateY(360deg) scale(1);
        }

        }

        /* Logo 3D giratorio */
        .company-logo img {
            max-height: 100px;
            filter: drop-shadow(0 0 10px rgba(26,115,232,0.5));
            animation: iconPulse 2s infinite, spin3D 4s linear infinite;
            transform-style: preserve-3d;
        }

        @@keyframes spin3D {
            0%

        {
            transform: rotateY(0deg);
        }

        100% {
            transform: rotateY(360deg);
        }

        }

        @@keyframes iconPulse {
            0%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.15);
        }

        100% {
            transform: scale(1);
        }

        }

        /* Secciones informativas */
        .section-title {
            font-size: 1.8rem;
            font-weight: 600;
            color: #0D47A1;
            margin-bottom: 10px;
        }

        .field-label {
            margin: 5px 0;
            font-size: 1.1rem;
        }

            .field-label i {
                margin-right: 8px;
            }

        .emitter-info, .invoice-meta, .client-info, .invoice-details {
            margin-bottom: 30px;
            padding: 25px;
            background: rgba(26,115,232,0.05);
            border-radius: 12px;
            transition: background 0.3s ease, transform 0.3s ease;
            animation: slideUp 1s ease-out;
        }

        @@keyframes slideUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .emitter-info:hover, .invoice-meta:hover, .client-info:hover, .invoice-details:hover {
            background: rgba(26,115,232,0.1);
            transform: scale(1.02);
        }

        /* Tabla de Detalles */
        .table-custom {
            width: 100%;
            border-collapse: collapse;
            margin-top: 30px;
        }

            .table-custom th, .table-custom td {
                padding: 18px;
                text-align: left;
                border-bottom: 1px solid #ddd;
                transition: transform 0.3s ease;
            }

            .table-custom th {
                background: #f1f1f1;
                color: #1A73E8;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

            .table-custom tbody td {
                color: #333;
            }

            .table-custom tbody tr:hover {
                transform: rotateY(5deg);
                box-shadow: 0 0 10px rgba(13,71,161,0.3);
            }

        /* Sección total con animación de pulso 3D */
        .total-section {
            font-size: 2.5rem;
            font-weight: bold;
            color: #0D47A1;
            text-align: right;
            margin-top: 30px;
            padding: 25px;
            background: #f8f9fa;
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(13,71,161,0.15);
            animation: pulseTotal 2s infinite;
        }

        @@keyframes pulseTotal {
            0%, 100%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        }

        /* Botones con efecto ripple */
        .invoice-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 40px;
            animation: fadeIn 1.5s ease-in-out, slideInButtons 1s ease-out;
            flex-wrap: wrap;
            gap: 20px;
        }

        @@keyframes slideInButtons {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .btn-custom {
            padding: 18px 28px;
            border: none;
            border-radius: 8px;
            font-size: 1.2rem;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            box-shadow: 0px 4px 15px rgba(0,0,0,0.1);
            position: relative;
            overflow: hidden;
        }

            .btn-custom::after {
                content: "";
                position: absolute;
                left: 50%;
                top: 50%;
                width: 0;
                height: 0;
                background: rgba(255,255,255,0.3);
                border-radius: 50%;
                transform: translate(-50%, -50%);
                transition: width 0.5s ease, height 0.5s ease;
                z-index: 0;
            }

            .btn-custom:hover::after {
                width: 200%;
                height: 200%;
            }

        .btn-primary-custom {
            background: #1A73E8;
            color: #fff;
            z-index: 1;
        }

            .btn-primary-custom:hover {
                background: #0D47A1;
                transform: translateY(-3px);
            }

        .btn-outline-custom {
            border: 3px solid #1A73E8;
            color: #1A73E8;
            background: transparent;
            z-index: 1;
        }

            .btn-outline-custom:hover {
                background: #1A73E8;
                color: #fff;
                transform: translateY(-3px);
            }

        .btn-success-custom {
            background: #28a745;
            color: #fff;
            z-index: 1;
        }

            .btn-success-custom:hover {
                background: #218838;
                transform: translateY(-3px);
            }

        /* Efecto interactivo 3D al pasar el mouse */
        @@media (max-width: 768px) {
            .invoice-actions

        {
            flex-direction: column;
            align-items: stretch;
        }

        .invoice-header {
            flex-direction: column;
            text-align: center;
        }

        .company-logo {
            margin-top: 20px;
        }

        }
    </style>
</head>
<body>
    <!-- Preloader -->
    <div id="preloader">
        <div class="loader"></div>
        <div class="loader-text">Cargando proceso de factura...</div>
    </div>
    <div class="invoice-container" id="invoice-container">
        <div class="invoice">
            <!-- Logo Corporativo 3D giratorio -->
            <div class="company-logo">
                <img src="/images/logo.png" alt="Logo Empresa" />
            </div>
            <!-- Cabecera de la Factura -->
            <div class="invoice-header">
                <h2 class="invoice-title">
                    <i class="fa-solid fa-file-invoice"></i> Factura Electrónica
                </h2>
                <div class="success-message">
                    <i class="fa-solid fa-check-circle"></i>
                    <strong>Transacción exitosa:</strong> ¡Compra realizada exitosamente!
                </div>
                <p class="field-label">
                    <i class="fa-solid fa-hashtag"></i>
                    <strong>Número de Factura:</strong> @Model.OrderNumber
                </p>
                <p class="field-label">
                    <i class="fa-solid fa-calendar-days"></i>
                    <strong>Fecha de Emisión:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")
                </p>
                <!-- Campos adicionales con valores por defecto -->
                <p class="field-label">
                    <i class="fa-solid fa-key"></i>
                    <strong>Clave de Acceso:</strong>  "12345678910"
                </p>
                <p class="field-label">
                    <i class="fa-solid fa-lock"></i>
                    <strong>Número de Autorización:</strong>  "11122333456788999"
                </p>
                <p class="field-label">
                    <i class="fa-solid fa-clock"></i>
                    <strong>Fecha de Autorización:</strong>  "Enero de 2001"
                </p>
               
            </div>
            <!-- Datos del Emisor (Información de la Empresa) -->
            <div class="emitter-info">
                <div class="section-title">
                    <i class="fa-solid fa-building"></i> Datos del Emisor
                </div>
                <p class="field-label">
                    <i class="fa-solid fa-briefcase"></i>
                    <strong>Razón Social:</strong> "Julio Manzano C"
                </p>
                <p class="field-label">
                    <i class="fa-solid fa-id-card"></i>
                    <strong>RUC:</strong>  "1201783998001"
                </p>
                <p class="field-label">
                    <i class="fa-solid fa-store"></i>
                    <strong>Nombre Comercial:</strong>  "Comercial Don Julio"
                </p>
                <p class="field-label">
                    <i class="fa-solid fa-location-dot"></i>
                    <strong>Dirección Matriz:</strong> "Dirección de la Empresa"
                </p>
                <p class="field-label">
                    <i class="fa-solid fa-book"></i>
                    <strong>Obligado a Llevar Contabilidad:</strong>  "Sí" 
                </p>
            </div>
            <!-- Datos del Comprador -->
            <div class="client-info">
                <div class="section-title">
                    <i class="fa-solid fa-user"></i> Datos del Comprador
                </div>
                <p class="field-label">
                    <i class="fa-solid fa-user-tie"></i>
                    <strong>Nombre:</strong> @Model.Customer.FullName
                </p>
                <p class="field-label">
                    <i class="fa-solid fa-id-card"></i>
                    <strong>RUC/CI:</strong>  @Model.Customer.RUC
                </p>
                <p class="field-label">
                    <i class="fa-solid fa-envelope"></i>
                    <strong>Email:</strong> @Model.Customer.Email
                </p>
                <p class="field-label">
                    <i class="fa-solid fa-phone"></i>
                    <strong>Teléfono:</strong> @Model.Customer.Phone
                </p>
                <p class="field-label">
                    <i class="fa-solid fa-location-dot"></i>
                    <strong>Dirección:</strong> @Model.Customer.Address
                </p>
                <p class="field-label">
                    <i class="fa-solid fa-credit-card"></i>
                    <strong>Método de pago:</strong> @(Model.PaymentMethod != null ? Model.PaymentMethod.Method : "No especificado")
                </p>

            </div>
            <!-- Información Adicional de la Factura -->
            <div class="invoice-meta">
                <div class="section-title">
                    <i class="fa-solid fa-info-circle"></i> Información de la Factura
                </div>
                <p class="field-label">
                    <i class="fa-solid fa-file-alt"></i>
                    <strong>Tipo de Emisión:</strong>  "NORMAL"
                </p>
                <p class="field-label">
                    <i class="fa-solid fa-cogs"></i>
                    <strong>Ambiente:</strong>  "PRODUCCIÓN"
                </p>
                <p class="field-label">
                    <i class="fa-solid fa-sort-numeric-up"></i>
                    <strong>Secuencial:</strong>  @Model.Sequential
                </p>
            </div>
            <!-- Detalles del Pedido -->
            <div class="invoice-details">
                <div class="section-title">
                    <i class="fa-solid fa-box"></i> Detalles del Pedido
                </div>
                <table class="table-custom">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th style="text-align: right;">Precio Unitario</th>
                            <th style="text-align: right;">V.Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderDetails)
                        {
                            var originalPrice = (item.Product != null) ? item.Product.Price : item.UnitPrice;
                            var discountPercentage = (item.Product != null && item.Product.IsOnOffer) ? item.Product.DiscountPercentage : 0;
                            var effectivePrice = (discountPercentage > 0) ? originalPrice * (1 - discountPercentage / 100m) : originalPrice;
                            var lineTotal = effectivePrice * item.Quantity;
                            <tr>
                                <td>@item.Product.Name</td>
                                <td>@item.Quantity</td>
                                <td style="text-align: right;">
                                    @if (discountPercentage > 0)
                                    {
                                        <span style="text-decoration: line-through;">@originalPrice.ToString("C", CultureInfo.CurrentCulture)</span>
                                        <br />
                                        <span>@effectivePrice.ToString("C", CultureInfo.CurrentCulture)</span>
                                    }
                                    else
                                    {
                                        @effectivePrice.ToString("C", CultureInfo.CurrentCulture)
                                    }
                                </td>
                                <td style="text-align: right;">@lineTotal.ToString("C", CultureInfo.CurrentCulture)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- Desglose del Pago -->
            <div class="total-section">
                <p>Subtotal: @subtotal.ToString("C", CultureInfo.CurrentCulture)</p>
                <p>IVA (15%): @totalIva.ToString("C", CultureInfo.CurrentCulture)</p>
                <p>Total: @finalTotal.ToString("C", CultureInfo.CurrentCulture)</p>
            </div>
            <!-- Acciones -->
            <div class="invoice-actions">
                <a class="btn-custom btn-outline-custom" asp-controller="Order" asp-action="GenerateInvoice" asp-route-orderId="@Model.Id" target="_blank">
                    <i class="fa-solid fa-file-pdf"></i> Ver PDF de la Factura
                </a>
                <a class="btn-custom btn-primary-custom" asp-controller="Order" asp-action="SendInvoiceEmailForm" asp-route-orderId="@Model.Id">
                    <i class="fa-solid fa-paper-plane"></i> Enviar Factura por Email
                </a>
                <!-- Botón para cancelar -->
                <form asp-controller="Order" asp-action="CancelTransaction" method="post" style="margin: 0; display:inline-block;">
                    <input type="hidden" name="orderId" value="@Model.Id" />
                    <button type="submit" class="btn-custom btn-danger-custom">
                        <i class="fa-solid fa-times"></i> Cancelar Transacción
                    </button>
                </form>
            </div>
        </div>
    </div>
    <!-- Efecto 3D interactivo al mover el mouse -->
    <script>
        const container = document.getElementById('invoice-container');
        document.addEventListener('mousemove', (e) => {
            const xAxis = (window.innerWidth / 2 - e.pageX) / 50;
            const yAxis = (window.innerHeight / 2 - e.pageY) / 50;
            container.style.transform = `perspective(1200px) rotateY(${xAxis}deg) rotateX(${yAxis}deg)`;
        });
    </script>
    <script>
        // Preloader
        window.addEventListener('load', () => {
            const preloader = document.getElementById('preloader');
            setTimeout(() => {
                preloader.classList.add('hidden');
            }, 500); // medio segundo de gracia
        });
    </script>
</body>
</html>
