@model CoronelExpress.Models.TrabajaConNosotros

@{
    ViewData["Title"] = "Trabaja Con Nosotros - Crear Solicitud";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            color: #64b5f6;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 4rem auto;
            padding: 2rem;
            background: rgba(0, 0, 0, 0.6);
            border-radius: 15px;
            box-shadow: 0 8px 30px rgba(0,0,0,0.4);
            text-align: center;
        }

        h2 {
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
            text-align: left;
        }

        label {
            display: block;
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

        input, textarea {
            width: 100%;
            padding: 0.8rem;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            outline: none;
            background: rgba(255,255,255,0.9);
            color: #333;
        }

        .btn-primary {
            padding: 1rem 2rem;
            font-size: 1.1rem;
            font-weight: 600;
            color: #fff;
            background: linear-gradient(90deg, #ff7f50, #ff6347);
            border: none;
            border-radius: 50px;
            cursor: pointer;
            transition: transform 0.3s, box-shadow 0.3s;
            box-shadow: 0 5px 15px rgba(0,0,0,0.4);
            margin-top: 1rem;
        }

            .btn-primary:hover {
                transform: scale(1.05);
                box-shadow: 0 8px 20px rgba(0,0,0,0.4);
            }

        .alert {
            position: relative;
            background: rgba(50, 205, 50, 0.9);
            color: white;
            padding: 1rem;
            border-radius: 10px;
            margin-bottom: 1rem;
            text-align: center;
            display: flex;
            justify-content: space-between;
            align-items: center;
            opacity: 0;
        }

        .alert-danger {
            background: rgba(220, 20, 60, 0.9);
        }

        .alert .close {
            cursor: pointer;
            font-weight: bold;
            margin-left: 10px;
        }

        .back-btn {
            display: inline-block;
            margin-top: 1rem;
            color: #fff;
            text-decoration: none;
            padding: 0.8rem 1.5rem;
            background: #ff7f50;
            border-radius: 50px;
            transition: 0.3s;
        }

            .back-btn:hover {
                background: #ff6347;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>@ViewData["Title"]</h2>

        @if (ViewData["SuccessMessage"] != null)
        {
            <div class="alert" id="successMessage">
                <span>@ViewData["SuccessMessage"] ¡Gracias por querer formar parte de nuestro equipo! Analizaremos tu solicitud y nos pondremos en contacto pronto.</span>
                <span class="close" onclick="closeAlert('successMessage')">&times;</span>
            </div>
        }

        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" id="errorMessage">
                <span>@ViewData["ErrorMessage"]</span>
                <span class="close" onclick="closeAlert('errorMessage')">&times;</span>
            </div>
        }

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mensaje"></label>
                <textarea asp-for="Mensaje" class="form-control"></textarea>
                <span asp-validation-for="Mensaje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Hoja de Vida (PDF)</label>
                <input type="file" name="hojaVida" accept="application/pdf" class="form-control" />
                <span asp-validation-for="HojaVidaPath" class="text-danger"></span>
            </div>
            <button type="submit" class="btn-primary">Enviar</button>
        </form>

        <a href="/Home/Index" class="back-btn">Regresar al Inicio</a>
    </div>

    <script>
        gsap.from(".container", { duration: 1.5, y: 50, opacity: 0, ease: "power3.out" });

        function closeAlert(id) {
            gsap.to(`#${id}`, { opacity: 0, y: -20, duration: 0.5, onComplete: () => document.getElementById(id).style.display = 'none' });
        }

        window.onload = function() {
            if (document.getElementById('successMessage')) {
                gsap.to('#successMessage', { opacity: 1, duration: 1, ease: "power3.out" });
            }
            if (document.getElementById('errorMessage')) {
                gsap.to('#errorMessage', { opacity: 1, duration: 1, ease: "power3.out" });
            }
        }
    </script>
</body>
</html>
