    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">

    <style>

        :root {
            /* Colores patrios y corporativos */
            --primary-color: #ffcc00; /* Amarillo intenso */
            --secondary-color: #003399; /* Azul profundo */
            --tertiary-color: #cc0000; /* Rojo vibrante */
            --gradient: linear-gradient(to right, var(--primary-color), var(--secondary-color), var(--tertiary-color));
            --text-color: #B0B0B0;
            --bg-color: #1a1a2e;
            --accent-color: #ffcc00; /* Para resaltar elementos */
            /* Transiciones y sombras */
            --transition-speed: 0.3s;
            --shadow-light: rgba(255, 204, 0, 0.5);
            --shadow-dark: rgba(0, 0, 0, 0.7);
            /* Tamaño del menú hamburguesa */
            --hamburger-size: 35px;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: var(--bg-color);
            color: var(--text-color);
            overflow-x: hidden;
            margin: 0;
            padding: 0;
            /* Fondo sutil con textura o patrón (opcional) */
            background-image: radial-gradient(var(--secondary-color) 1px, transparent 1px);
            background-size: 20px 20px;
        }

        /* Navbar elegante y responsiva */
        .navbar {
            background: var(--gradient);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            padding: 1rem 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        /* Logo con animación */
        .don-julio-logo {
            height: 50px;
            transition: transform var(--transition-speed) ease-in-out;
        }

            .don-julio-logo:hover {
                transform: scale(1.1);
            }

        /* Marca de la navbar */
        .navbar-brand {
            font-weight: bold;
            font-size: 1.8rem;
            color: var(--text-color) !important;
            animation: fadeInDown 1s ease-out;
        }

        /* Enlaces de navegación */
        .nav-link {
            color: var(--text-color) !important;
            font-size: 1.2rem;
            font-weight: 500;
            transition: transform var(--transition-speed), color var(--transition-speed), background-color var(--transition-speed);
            padding: 0.5rem 1rem;
            border-radius: 8px;
            position: relative;
            overflow: hidden;
        }

            .nav-link::after {
                content: "";
                position: absolute;
                left: 0;
                bottom: 0;
                width: 100%;
                height: 2px;
                background-color: var(--accent-color);
                transform: scaleX(0);
                transform-origin: right;
                transition: transform 0.3s ease-in-out;
            }

            .nav-link:hover {
                transform: scale(1.05);
                color: var(--primary-color) !important;
                background-color: rgba(255, 204, 0, 0.1);
            }

                .nav-link:hover::after {
                    transform: scaleX(1);
                    transform-origin: left;
                }

        /* Animación de entrada */
        @@keyframes fadeInDown {
            from

        {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* Hamburguesa personalizada para mobile */
        .navbar-toggler {
            border: none;
            outline: none;
            background: none;
            cursor: pointer;
        }

        .navbar-toggler-icon {
            width: var(--hamburger-size);
            height: var(--hamburger-size);
            filter: brightness(0) invert(1);
            transition: transform 0.3s ease-in-out;
        }

        .navbar-toggler.active .navbar-toggler-icon {
            transform: rotate(90deg);
        }

        /* Mostrar menú en mobile con animación */
        .navbar-collapse {
            display: none;
            flex-direction: column;
            margin-top: 1rem;
        }

            .navbar-collapse.show {
                display: flex !important;
                animation: fadeInDown 0.5s ease-out;
            }

        /* Ejemplo de sección con fondo degradado para reforzar el diseño patriótico */
        .section-header {
            background: var(--gradient);
            padding: 2rem;
            text-align: center;
            box-shadow: 0 4px 8px var(--shadow-dark);
            margin-bottom: 2rem;
        }

            .section-header h1 {
                margin: 0;
                font-size: 2.5rem;
            }

        /* Responsividad para pantallas pequeñas */
        @@media (max-width: 768px) {
            .navbar

        {
            flex-direction: column;
            align-items: flex-start;
        }

        .nav-link {
            font-size: 1rem;
            padding: 0.5rem;
        }

        .section-header h1 {
            font-size: 2rem;
        }

        }

        /* Footer básico */
        .footer {
            background: var(--gradient);
            padding: 60px 0;
            color: var(--text-color);
        }

            .footer h5 {
                font-size: 1.2rem;
                font-weight: 600;
                margin-bottom: 20px;
            }

            .footer a {
                color: var(--text-color);
                text-decoration: none;
                transition: color var(--transition-speed) ease;
            }

                .footer a:hover {
                    color: #ffcc00;
                }

        .footer-content {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .footer-section {
            flex: 1;
            min-width: 250px;
            margin: 20px 0;
        }

        .social-links a {
            margin-right: 15px;
            font-size: 1.4rem;
        }

        .footer-bottom {
            text-align: center;
            border-top: 1px solid rgba(255, 255, 255, 0.3);
            padding-top: 20px;
            margin-top: 40px;
            font-size: 0.9rem;
        }

        /* Footer avanzado minimalista */
        .advanced-footer {
            background: linear-gradient(135deg, #0D47A1, #1976D2);
            color: var(--text-color);
            padding: 60px 0;
            font-family: 'Poppins', sans-serif;
            position: relative;
            overflow: hidden;
            background-blend-mode: multiply;
        }

            .advanced-footer::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url('data:image/svg+xml;utf8,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><circle cx="50" cy="50" r="50" fill="white" opacity="0.05"/></svg>');
                pointer-events: none;
                z-index: 1;
            }

            .advanced-footer .container {
                position: relative;
                z-index: 2;
            }

            .advanced-footer h5 {
                font-size: 1.6rem;
                font-weight: 700;
                text-transform: uppercase;
                margin-bottom: 20px;
                letter-spacing: 1px;
                position: relative;
            }

                .advanced-footer h5::after {
                    content: "";
                    position: absolute;
                    left: 0;
                    bottom: -5px;
                    width: 50px;
                    height: 3px;
                    background: var(--accent-color);
                    border-radius: 2px;
                }

            .advanced-footer a {
                color: var(--text-color);
                text-decoration: none;
                transition: color var(--transition-speed), transform var(--transition-speed);
            }

                .advanced-footer a:hover {
                    color: var(--accent-color);
                    transform: translateY(-3px);
                }

            .advanced-footer .footer-section {
                margin-bottom: 30px;
                animation: slideUp 1s ease forwards;
                opacity: 0;
            }

                .advanced-footer .footer-section:nth-child(1) {
                    animation-delay: 0.2s;
                }

                .advanced-footer .footer-section:nth-child(2) {
                    animation-delay: 0.4s;
                }

                .advanced-footer .footer-section:nth-child(3) {
                    animation-delay: 0.6s;
                }

        @@keyframes slideUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .advanced-footer .newsletter .form-control {
            border: 2px solid transparent;
            border-radius: 50px;
            padding: 12px 20px;
            transition: border-color 0.3s, box-shadow 0.3s;
            background-color: rgba(255, 255, 255, 0.1);
            color: var(--text-color);
        }

            .advanced-footer .newsletter .form-control:focus {
                border-color: var(--accent-color);
                box-shadow: 0 0 15px rgba(255, 204, 0, 0.6);
                background-color: rgba(255, 255, 255, 0.1);
            }

        .advanced-footer .newsletter button.btn-neon {
            border-radius: 50px;
            padding: 12px 35px;
            background-color: var(--accent-color);
            color: #0D47A1;
            border: none;
            font-weight: bold;
            transition: background-color 0.3s, transform 0.3s;
            box-shadow: 0 4px 15px rgba(255, 204, 0, 0.4);
        }

            .advanced-footer .newsletter button.btn-neon:hover {
                background-color: #FFC107;
                transform: scale(1.05);
            }

        .advanced-footer .social a {
            font-size: 2rem;
            margin-right: 15px;
            display: inline-block;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .advanced-footer .social a:hover {
                transform: scale(1.15);
                box-shadow: 0 4px 10px rgba(255, 204, 0, 0.4);
            }

        .advanced-footer .info ul {
            padding: 0;
            list-style: none;
        }

            .advanced-footer .info ul li {
                margin-bottom: 10px;
                transition: color 0.3s;
            }

                .advanced-footer .info ul li a:hover {
                    color: var(--accent-color);
                    transform: translateX(5px);
                }

        .footer-divider {
            border-top: 1px solid rgba(255, 255, 255, 0.3);
            margin: 40px 0;
        }

        .footer-bottom p {
            font-size: 0.9rem;
            margin: 0;
        }

        /* Carrusel por Categoría */
        .carousel-item {
            transform: perspective(1200px) rotateY(30deg);
            transition: transform 0.8s ease, opacity 0.8s ease;
            opacity: 0;
            backface-visibility: hidden;
        }

            .carousel-item.active {
                transform: perspective(1200px) rotateY(0deg);
                opacity: 1;
                animation: rotateIn 0.8s ease-out forwards;
            }

        @@keyframes rotateIn {
            from

        {
            transform: perspective(1200px) rotateY(30deg);
            opacity: 0;
        }

        to {
            transform: perspective(1200px) rotateY(0deg);
            opacity: 1;
        }

        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            filter: drop-shadow(0 2px 4px rgba(0,0,0,0.5));
            transition: transform 0.3s ease;
        }

            .carousel-control-prev-icon:hover,
            .carousel-control-next-icon:hover {
                transform: scale(1.1) rotate(5deg);
            }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("HeadScripts", required: false)

</head>
