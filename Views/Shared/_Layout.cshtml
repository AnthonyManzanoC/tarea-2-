                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"> 🛍️ Home 🏠 </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cart" asp-action="Index"> 🛒 Compras 🚚 </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Dashboard"> 📦 Administración 💲 </a>
                        </li>
                        <!-- Formulario oculto para el Logout -->
                        <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                        </form>

                        <!-- Botón que activa el modal de confirmación -->
                        <button type="button" class="btn btn-outline-danger d-flex align-items-center" data-bs-toggle="modal" data-bs-target="#logoutModal">
                            <i class="fas fa-sign-out-alt me-2"></i>
                            <span>Cerrar Sesión</span>
                        </button>

                        <!-- Modal de confirmación -->
                        <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
